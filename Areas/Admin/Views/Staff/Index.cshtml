@{
    ViewData["Title"] = "Qu?n lý Nhân viên - Admin";
}

<div class="staff-management">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">
                    <i class="fas fa-users me-2"></i>
                    Qu?n lý Nhân viên
                </h2>
                <p class="page-subtitle">Qu?n lý thông tin nhân viên và phân quy?n</p>
            </div>
            <div class="page-actions">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    Thêm nhân viên
                </a>
                <a asp-action="Departments" class="btn btn-outline-secondary">
                    <i class="fas fa-building me-2"></i>
                    Phòng ban
                </a>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Tìm ki?m</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                           placeholder="Tên, email, ho?c s? ?i?n tho?i...">
                </div>
                <div class="col-md-3">
                    <label for="departmentId" class="form-label">Phòng ban</label>
                    <select class="form-select" id="departmentId" name="departmentId">
                        <option value="">T?t c? phòng ban</option>
                        <!-- Add department options here -->
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="roleId" class="form-label">Vai trò</label>
                    <select class="form-select" id="roleId" name="roleId">
                        <option value="">T?t c? vai trò</option>
                        <!-- Add role options here -->
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>
                            Tìm ki?m
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Staff Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Danh sách nhân viên</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>H? và tên</th>
                            <th>Email</th>
                            <th>S? ?i?n tho?i</th>
                            <th>Phòng ban</th>
                            <th>Vai trò</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="7" class="text-center text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Ch?a có d? li?u nhân viên. Hãy thêm nhân viên m?i.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Staff pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <span class="page-link">Tr??c</span>
            </li>
            <li class="page-item active">
                <span class="page-link">1</span>
            </li>
            <li class="page-item disabled">
                <span class="page-link">Sau</span>
            </li>
        </ul>
    </nav>
</div>

<style>
    .staff-management .page-header {
        margin-bottom: 1.5rem;
    }
    
    .staff-management .page-title {
        color: #2d3748;
        font-weight: 600;
        margin: 0;
    }
    
    .staff-management .page-subtitle {
        color: #718096;
        margin: 0.25rem 0 0 0;
        font-size: 0.875rem;
    }
    
    .staff-management .table th {
        font-weight: 600;
        color: #4a5568;
        border-top: none;
    }
    
    .staff-management .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid #e9ecef;
    }
</style>