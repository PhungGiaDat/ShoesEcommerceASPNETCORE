{
  "_comment": "Copy this file to appsettings.Development.json and fill in your values",
  "_warning": "NEVER commit real credentials to Git!",

  "SiteUrl": "https://localhost:7085",

  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Host=YOUR_HOST;Port=5432;Database=YOUR_DB;Username=YOUR_USER;Password=YOUR_PASSWORD;Pooling=true;"
  },

  "SupabaseStorage": {
    "ProjectUrl": "https://YOUR_PROJECT.supabase.co",
    "ServiceRoleKey": "YOUR_SERVICE_ROLE_KEY",
    "BucketName": "images",
    "MaxFileSizeBytes": 52428800
  },

  "Authentication": {
    "Google": {
      "ClientId": "YOUR_GOOGLE_CLIENT_ID",
      "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET"
    }
  },

  "EmailSettings": {
    "Provider": "Mailchimp",
    "MailchimpApiKey": "YOUR_MAILCHIMP_API_KEY",
    "MailchimpServerPrefix": "us10",
    "MailchimpAudienceId": "YOUR_AUDIENCE_ID",
    "MailchimpUserId": "YOUR_USER_ID",
    "Templates": {
      "OrderConfirmation": 0,
      "OrderProcessing": 0,
      "OrderShipped": 0,
      "OrderDelivered": 0,
      "OrderCancelled": 0,
      "WelcomeEmail": 0,
      "PasswordReset": 0,
      "AbandonedCart": 0,
      "PromotionCampaign": 0
    },
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "your-email@gmail.com",
    "SenderName": "SPORTS Vietnam",
    "Username": "your-email@gmail.com",
    "Password": "YOUR_APP_PASSWORD",
    "EnableSsl": true,
    "UseStartTls": true,
    "WebsiteUrl": "https://localhost:7085",
    "LogoUrl": "/images/logo.png",
    "Enabled": true
  },

  "TawkTo": {
    "Enabled": true,
    "PropertyId": "YOUR_TAWKTO_PROPERTY_ID",
    "WidgetId": "YOUR_TAWKTO_WIDGET_ID"
  },

  "SocialChat": {
    "Facebook": {
      "Enabled": true,
      "PageId": "YOUR_FB_PAGE_ID",
      "AppId": "",
      "ThemeColor": "0084FF",
      "ButtonText": "Chat Facebook",
      "DefaultRef": "website_chat"
    },
    "Zalo": {
      "Enabled": false,
      "OaId": "",
      "WelcomeMessage": "Xin chao! SPORTS Vietnam co the giup gi cho ban?",
      "AutoPopupDelay": 0
    }
  },

  "PayPalOptions": {
    "Mode": "Sandbox",
    "ClientId": "YOUR_PAYPAL_CLIENT_ID",
    "ClientSecret": "YOUR_PAYPAL_CLIENT_SECRET"
  },

  "VNPay": {
    "TmnCode": "YOUR_VNPAY_TMNCODE",
    "HashSecret": "YOUR_VNPAY_HASHSECRET",
    "Url": "https://sandbox.vnpayment.vn/paymentv2/vpcpay.html",
    "ReturnUrl": "https://localhost:7085/Payment/VnPayReturn"
  },

  "Twilio": {
    "AccountSid": "YOUR_TWILIO_ACCOUNT_SID",
    "AuthToken": "YOUR_TWILIO_AUTH_TOKEN",
    "PhoneNumber": "+1234567890",
    "OtpLength": 6,
    "OtpExpirationMinutes": 5
  }
}
