@model ShoesEcommerce.Models.Orders.Order

@{
    ViewData["Title"] = "Thanh toán thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var paypalToken = ViewBag.PayPalToken as string;
    var transactionId = Model.Payment?.TransactionId;
}

<div class="payment-success-page">
    <div class="success-container">
        <!-- Success Icon -->
        <div class="success-header">
            <div class="success-icon">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
            </div>
            <h1>Thanh toán thành công!</h1>
            <p>Cảm ơn bạn đã mua hàng tại Sports Shop</p>
        </div>

        <!-- Transaction Info Card -->
        @if (!string.IsNullOrEmpty(transactionId))
        {
            <div class="transaction-card">
                <div class="transaction-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
                        <line x1="1" y1="10" x2="23" y2="10"/>
                    </svg>
                </div>
                <div class="transaction-info">
                    <span class="transaction-label">Mã giao dịch PayPal</span>
                    <div class="transaction-id">
                        <code>@transactionId</code>
                        <button type="button" class="btn-copy" onclick="copyToClipboard('@transactionId')" title="Sao chép">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        }

        <!-- Order Summary -->
        <div class="order-summary">
            <div class="summary-header">
                <h2>Thông tin đơn hàng</h2>
                <span class="order-number">#@Model.Id</span>
            </div>

            <div class="summary-grid">
                <div class="summary-item">
                    <span class="item-label">Ngày đặt</span>
                    <span class="item-value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
                <div class="summary-item">
                    <span class="item-label">Phương thức</span>
                    <span class="item-value">
                        <span class="badge badge-paypal">PayPal</span>
                    </span>
                </div>
                <div class="summary-item">
                    <span class="item-label">Trạng thái</span>
                    <span class="item-value">
                        <span class="badge badge-success">Đã thanh toán</span>
                    </span>
                </div>
                @if (Model.Payment?.PaidAt != null)
                {
                    <div class="summary-item">
                        <span class="item-label">Thanh toán lúc</span>
                        <span class="item-value">@Model.Payment.PaidAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                }
            </div>
        </div>

        <!-- Order Items -->
        <div class="order-items">
            <h3>Sản phẩm đã đặt</h3>
            
            <div class="items-list">
                @foreach (var item in Model.OrderDetails)
                {
                    <div class="item-row">
                        <div class="item-image">
                            @if (!string.IsNullOrEmpty(item.ProductVariant?.ImageUrl))
                            {
                                <img src="@item.ProductVariant.ImageUrl" alt="@item.ProductVariant.Product?.Name" />
                            }
                            else
                            {
                                <div class="placeholder-image">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                        <circle cx="8.5" cy="8.5" r="1.5"/>
                                        <polyline points="21 15 16 10 5 21"/>
                                    </svg>
                                </div>
                            }
                        </div>
                        <div class="item-details">
                            <span class="item-name">@item.ProductVariant?.Product?.Name</span>
                            <span class="item-variant">@item.ProductVariant?.Color - Size @item.ProductVariant?.Size</span>
                        </div>
                        <div class="item-quantity">×@item.Quantity</div>
                        <div class="item-price">@((item.UnitPrice * item.Quantity).ToString("N0"))đ</div>
                    </div>
                }
            </div>

            <!-- Totals -->
            <div class="order-totals">
                @{
                    var subtotal = Model.OrderDetails.Sum(od => od.UnitPrice * od.Quantity);
                    var discountAmount = subtotal - Model.TotalAmount;
                }
                
                <div class="total-row">
                    <span>Tạm tính</span>
                    <span>@subtotal.ToString("N0")đ</span>
                </div>
                
                @if (discountAmount > 0)
                {
                    <div class="total-row discount">
                        <span>Giảm giá</span>
                        <span>-@discountAmount.ToString("N0")đ</span>
                    </div>
                }
                
                <div class="total-row final">
                    <span>Tổng cộng</span>
                    <span>@Model.TotalAmount.ToString("N0")đ</span>
                </div>
            </div>
        </div>

        <!-- Shipping Address -->
        @if (Model.ShippingAddress != null)
        {
            <div class="shipping-info">
                <h3>Địa chỉ giao hàng</h3>
                <div class="address-card">
                    <div class="address-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                            <circle cx="12" cy="10" r="3"/>
                        </svg>
                    </div>
                    <div class="address-details">
                        <strong>@Model.ShippingAddress.FullName</strong>
                        <span>@Model.ShippingAddress.PhoneNumber</span>
                        <span>@Model.ShippingAddress.Address, @Model.ShippingAddress.District, @Model.ShippingAddress.City</span>
                    </div>
                </div>
            </div>
        }

        <!-- Info Box -->
        <div class="info-box">
            <div class="info-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="16" x2="12" y2="12"/>
                    <line x1="12" y1="8" x2="12.01" y2="8"/>
                </svg>
            </div>
            <div class="info-content">
                <strong>Thông tin quan trọng</strong>
                <ul>
                    <li>Đơn hàng sẽ được xử lý trong 1-2 ngày làm việc</li>
                    <li>Thời gian giao hàng dự kiến: 3-5 ngày làm việc</li>
                    @if (!string.IsNullOrEmpty(transactionId))
                    {
                        <li>Mã giao dịch <code>@transactionId</code> có thể dùng để tra cứu trên PayPal</li>
                    }
                </ul>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <a href="@Url.Action("Index", "Home")" class="btn-secondary">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                    <polyline points="9 22 9 12 15 12 15 22"/>
                </svg>
                Về trang chủ
            </a>
            <a href="@Url.Action("Index", "Order")" class="btn-primary">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                </svg>
                Xem đơn hàng
            </a>
        </div>
    </div>
</div>

@section Styles {
<style>
    :root {
        --color-black: #000000;
        --color-white: #ffffff;
        --color-gray-50: #fafafa;
        --color-gray-100: #f5f5f5;
        --color-gray-200: #e5e5e5;
        --color-gray-300: #d1d1d1;
        --color-gray-400: #a3a3a3;
        --color-gray-500: #737373;
        --color-gray-600: #525252;
        --color-gray-700: #404040;
        --color-gray-800: #262626;
        --color-success: #16a34a;
        --color-success-light: #dcfce7;
        --color-paypal: #003087;
        --color-paypal-light: #e8f0fe;
    }

    .payment-success-page {
        min-height: calc(100vh - 200px);
        background: var(--color-gray-100);
        padding: 3rem 1rem;
    }

    .success-container {
        max-width: 600px;
        margin: 0 auto;
    }

    /* Success Header */
    .success-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .success-icon {
        width: 100px;
        height: 100px;
        background: var(--color-success-light);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: var(--color-success);
        animation: scaleIn 0.5s ease-out;
    }

    .success-header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--color-success);
        margin: 0 0 0.5rem;
    }

    .success-header p {
        color: var(--color-gray-500);
        margin: 0;
    }

    @@keyframes scaleIn {
        from { transform: scale(0); opacity: 0; }
        to { transform: scale(1); opacity: 1; }
    }

    /* Transaction Card */
    .transaction-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        background: var(--color-paypal-light);
        border: 1px solid #bdd4f7;
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .transaction-icon {
        width: 56px;
        height: 56px;
        background: var(--color-white);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-paypal);
        flex-shrink: 0;
    }

    .transaction-info {
        flex: 1;
    }

    .transaction-label {
        font-size: 0.8rem;
        color: var(--color-paypal);
        font-weight: 500;
        display: block;
        margin-bottom: 0.25rem;
    }

    .transaction-id {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .transaction-id code {
        font-size: 1rem;
        font-weight: 600;
        color: var(--color-gray-800);
        background: var(--color-white);
        padding: 0.35rem 0.75rem;
        border-radius: 6px;
        font-family: 'SF Mono', 'Monaco', monospace;
    }

    .btn-copy {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-white);
        border: 1px solid var(--color-gray-300);
        border-radius: 6px;
        color: var(--color-gray-600);
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-copy:hover {
        background: var(--color-gray-100);
        color: var(--color-black);
    }

    .btn-copy.copied {
        background: var(--color-success);
        border-color: var(--color-success);
        color: white;
    }

    /* Order Summary */
    .order-summary,
    .order-items,
    .shipping-info {
        background: var(--color-white);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
    }

    .summary-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--color-gray-200);
    }

    .summary-header h2 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
        color: var(--color-gray-800);
    }

    .order-number {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--color-gray-500);
    }

    .summary-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .summary-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .item-label {
        font-size: 0.75rem;
        color: var(--color-gray-500);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .item-value {
        font-size: 0.9rem;
        color: var(--color-gray-800);
        font-weight: 500;
    }

    .badge {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.6rem;
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .badge-paypal {
        background: var(--color-paypal-light);
        color: var(--color-paypal);
    }

    .badge-success {
        background: var(--color-success-light);
        color: var(--color-success);
    }

    /* Order Items */
    .order-items h3,
    .shipping-info h3 {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--color-gray-800);
        margin: 0 0 1rem;
    }

    .items-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .item-row {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem;
        background: var(--color-gray-50);
        border-radius: 8px;
    }

    .item-image img,
    .placeholder-image {
        width: 56px;
        height: 56px;
        border-radius: 8px;
        object-fit: cover;
    }

    .placeholder-image {
        background: var(--color-gray-200);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-gray-400);
    }

    .item-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .item-name {
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--color-gray-800);
    }

    .item-variant {
        font-size: 0.8rem;
        color: var(--color-gray-500);
    }

    .item-quantity {
        font-size: 0.85rem;
        color: var(--color-gray-500);
    }

    .item-price {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--color-gray-800);
    }

    /* Order Totals */
    .order-totals {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--color-gray-200);
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        font-size: 0.9rem;
        color: var(--color-gray-600);
    }

    .total-row.discount {
        color: var(--color-success);
    }

    .total-row.final {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--color-black);
        border-top: 1px solid var(--color-gray-200);
        margin-top: 0.5rem;
        padding-top: 1rem;
    }

    /* Shipping Info */
    .address-card {
        display: flex;
        gap: 1rem;
        background: var(--color-gray-50);
        padding: 1rem;
        border-radius: 8px;
    }

    .address-icon {
        width: 40px;
        height: 40px;
        background: var(--color-white);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-gray-500);
        flex-shrink: 0;
    }

    .address-details {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        font-size: 0.9rem;
        color: var(--color-gray-600);
    }

    .address-details strong {
        color: var(--color-gray-800);
    }

    /* Info Box */
    .info-box {
        display: flex;
        gap: 1rem;
        background: #eff6ff;
        border: 1px solid #bfdbfe;
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .info-icon {
        width: 40px;
        height: 40px;
        background: var(--color-white);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #3b82f6;
        flex-shrink: 0;
    }

    .info-content {
        flex: 1;
    }

    .info-content strong {
        font-size: 0.9rem;
        color: #1e40af;
        display: block;
        margin-bottom: 0.5rem;
    }

    .info-content ul {
        margin: 0;
        padding-left: 1.25rem;
        font-size: 0.85rem;
        color: #1e40af;
    }

    .info-content li {
        margin-bottom: 0.25rem;
    }

    .info-content code {
        background: var(--color-white);
        padding: 0.15rem 0.4rem;
        border-radius: 4px;
        font-size: 0.8rem;
    }

    /* Action Buttons */
    .action-buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .btn-primary,
    .btn-secondary {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-primary {
        background: var(--color-black);
        color: var(--color-white);
    }

    .btn-primary:hover {
        background: var(--color-gray-800);
        color: var(--color-white);
    }

    .btn-secondary {
        background: var(--color-white);
        color: var(--color-gray-700);
        border: 1px solid var(--color-gray-300);
    }

    .btn-secondary:hover {
        background: var(--color-gray-50);
        color: var(--color-black);
    }

    /* Responsive */
    @@media (max-width: 600px) {
        .payment-success-page {
            padding: 2rem 1rem;
        }

        .summary-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            grid-template-columns: 1fr;
        }

        .transaction-card {
            flex-direction: column;
            text-align: center;
        }

        .transaction-id {
            justify-content: center;
        }
    }
</style>
}

@section Scripts {
<script>
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        const btn = event.target.closest('button');
        btn.classList.add('copied');
        btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>';
        
        setTimeout(function() {
            btn.classList.remove('copied');
            btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>';
        }, 2000);
    });
}
</script>
}
