        }

        .minimalist-table th {
            padding: 1rem;
            text-align: left;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-700);
            border-bottom: 1px solid var(--gray-200);
        }

        .minimalist-table td {
            padding: 1rem;
            border-bottom: 1px solid var(--gray-100);
            font-size: 0.9rem;
            color: var(--gray-800);
        }

        .minimalist-table tbody tr:hover {
            background: var(--gray-50);
        }

        /* ===== CUSTOMER INFO ===== */
        .customer-id {
            font-family: monospace;
            color: var(--gray-600);
            font-size: 0.85rem;
        }

        .customer-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .customer-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--gray-900);
            color: var(--white);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.9rem;
            flex-shrink: 0;
        }

        .customer-details {
            flex: 1;
        }

        .customer-name {
            font-weight: 500;
            color: var(--gray-900);
            margin-bottom: 0.125rem;
        }

        .customer-joined {
            font-size: 0.8rem;
            color: var(--gray-600);
        }

        /* ===== CONTACT INFO ===== */
        .contact-info {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .contact-item i {
            color: var(--gray-500);
            font-size: 0.8rem;
            width: 16px;
        }

        .contact-link {
            color: var(--gray-700);
            text-decoration: none;
            transition: var(--transition);
        }

        .contact-link:hover {
            color: var(--gray-900);
            text-decoration: underline;
        }

        /* ===== ADDRESS INFO ===== */
        .address-info {
            font-size: 0.875rem;
        }

        .address-count {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--gray-700);
            margin-bottom: 0.25rem;
        }

        .address-count i {
            color: var(--gray-500);
            font-size: 0.8rem;
        }

        .address-preview {
            color: var(--gray-600);
            font-size: 0.8rem;
        }

        .text-muted-minimal {
            color: var(--gray-500);
            font-size: 0.875rem;
        }

        /* ===== BADGES ===== */
        .count-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 32px;
            height: 32px;
            padding: 0 0.5rem;
            border-radius: var(--border-radius);
            font-weight: 600;
            font-size: 0.875rem;
        }

        .count-badge.success {
            background: rgba(39, 174, 96, 0.1);
            color: var(--success);
        }

        .count-badge.muted {
            background: var(--gray-100);
            color: var(--gray-500);
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.375rem 0.75rem;
            border-radius: var(--border-radius);
            font-size: 0.8rem;
            font-weight: 500;
        }

        .status-badge.active {
            background: rgba(39, 174, 96, 0.1);
            color: var(--success);
        }

        .status-badge.inactive {
            background: var(--gray-100);
            color: var(--gray-600);
        }

        .status-badge i {
            font-size: 0.75rem;
        }

        /* ===== ACTION BUTTONS ===== */
        .action-buttons {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }

        .btn-action {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            background: var(--white);
            color: var(--gray-700);
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
        }

        .btn-action:hover {
            background: var(--gray-900);
            border-color: var(--gray-900);
            color: var(--white);
        }

        .btn-action i {
            font-size: 0.875rem;
        }

        /* ===== EMPTY STATE ===== */
        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
        }

        .empty-state i {
            color: var(--gray-300);
            margin-bottom: 1.5rem;
        }

        .empty-state h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--gray-600);
            margin: 0;
        }

        /* ===== RESPONSIVE ===== */
        @@media (max-width: 768px) {
            .minimalist-customer-management {
                padding: 1rem 0.5rem;
            }

            .page-header-minimal .d-flex {
                flex-direction: column;
                align-items: flex-start !important;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .table-container {
                overflow-x: auto;
            }

            .minimalist-table {
                min-width: 800px;
            }

            .filter-actions {
                flex-direction: column;
            }

            .filter-btn {
                width: 100%;
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Filter customers by status
        function filterByStatus(status) {
            const rows = document.querySelectorAll('.customer-row');
            const buttons = document.querySelectorAll('.filter-btn');
            let visibleCount = 0;

            // Update active button
            buttons.forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.filter === status) {
                    btn.classList.add('active');
                }
            });

            // Filter rows
            rows.forEach(row => {
                if (status === 'all' || row.dataset.status === status) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Show/hide empty state
            const emptyState = document.getElementById('emptyState');
            const tableBody = document.getElementById('customerTableBody');
            if (visibleCount === 0) {
                emptyState.style.display = 'block';
                tableBody.style.display = 'none';
            } else {
                emptyState.style.display = 'none';
                tableBody.style.display = '';
            }
        }

        // Search customers
        function filterCustomers() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const rows = document.querySelectorAll('.customer-row');
            let visibleCount = 0;

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(filter)) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Show/hide empty state
            const emptyState = document.getElementById('emptyState');
            const tableBody = document.getElementById('customerTableBody');
            if (visibleCount === 0) {
                emptyState.style.display = 'block';
                tableBody.style.display = 'none';
            } else {
                emptyState.style.display = 'none';
                tableBody.style.display = '';
            }
        }

        // View customer details
        function viewCustomer(customerId) {
