@using Microsoft.EntityFrameworkCore
@{
    ViewData["Title"] = "Qu?n lý Khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* Inject DbContext to get customers *@
@inject ShoesEcommerce.Data.AppDbContext DbContext

@{
    var customers = await DbContext.Customers
        .Include(c => c.Orders)
        .Include(c => c.ShippingAddresses)
        .OrderByDescending(c => c.Id)
        .ToListAsync();
}

<!-- Minimalist Customer Management -->
<div class="minimalist-customer-management">
    <!-- Clean Header -->
    <div class="page-header-minimal">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h1 class="page-title-minimal">Qu?n lý Khách hàng</h1>
                <p class="page-subtitle-minimal">Danh sách và thông tin khách hàng trong h? th?ng</p>
            </div>
            <div class="header-actions">
                <button onclick="exportCustomers()" class="btn-minimal-outline">
                    <i class="fas fa-download me-2"></i>
                    Xu?t Excel
                </button>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@customers.Count()</div>
                <div class="stat-label">T?ng khách hàng</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon success">
                <i class="fas fa-user-check"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@customers.Count(c => c.Orders.Any())</div>
                <div class="stat-label">?ã mua hàng</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon warning">
                <i class="fas fa-user-clock"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@customers.Count(c => !c.Orders.Any())</div>
                <div class="stat-label">Ch?a mua hàng</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon info">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@customers.Sum(c => c.Orders.Count())</div>
                <div class="stat-label">T?ng ??n hàng</div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="search-box">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" class="search-input" placeholder="Tìm ki?m theo tên, email ho?c s? ?i?n tho?i..." onkeyup="filterCustomers()">
        </div>
        <div class="filter-actions">
            <button onclick="filterByStatus('all')" class="filter-btn active" data-filter="all">
                T?t c? (@customers.Count())
            </button>
            <button onclick="filterByStatus('active')" class="filter-btn" data-filter="active">
                ?ã mua (@customers.Count(c => c.Orders.Any()))
            </button>
            <button onclick="filterByStatus('inactive')" class="filter-btn" data-filter="inactive">
                Ch?a mua (@customers.Count(c => !c.Orders.Any()))
            </button>
        </div>
    </div>

    <!-- Customers Table -->
    <div class="table-container">
        @if (customers.Any())
        {
            <table class="minimalist-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Khách hàng</th>
                        <th>Liên h?</th>
                        <th>??a ch?</th>
                        <th class="text-center">??n hàng</th>
                        <th class="text-center">Tr?ng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="customerTableBody">
                    @foreach (var customer in customers)
                    {
                        <tr class="customer-row" data-status="@(customer.Orders.Any() ? "active" : "inactive")">
                            <td>
                                <div class="customer-id">#@customer.Id</div>
                            </td>
                            <td>
                                <div class="customer-info">
                                    <div class="customer-avatar">
                                        @(customer.FirstName?.Substring(0, 1).ToUpper())
                                    </div>
                                    <div class="customer-details">
                                        <div class="customer-name">@customer.FirstName @customer.LastName</div>
                                        <div class="customer-joined">Tham gia: @customer.Id</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="contact-info">
                                    @if (!string.IsNullOrEmpty(customer.Email))
                                    {
                                        <div class="contact-item">
                                            <i class="fas fa-envelope"></i>
                                            <a href="mailto:@customer.Email" class="contact-link">@customer.Email</a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(customer.PhoneNumber))
                                    {
                                        <div class="contact-item">
                                            <i class="fas fa-phone"></i>
                                            <a href="tel:@customer.PhoneNumber" class="contact-link">@customer.PhoneNumber</a>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="address-info">
                                    @if (customer.ShippingAddresses.Any())
                                    {
                                        var mainAddress = customer.ShippingAddresses.FirstOrDefault();
                                        <div class="address-count">
                                            <i class="fas fa-map-marker-alt"></i>
                                            @customer.ShippingAddresses.Count() ??a ch?
                                        </div>
                                        @if (mainAddress != null)
                                        {
                                            <div class="address-preview">@mainAddress.City</div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted-minimal">Ch?a có ??a ch?</span>
                                    }
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="order-count">
                                    @if (customer.Orders.Any())
                                    {
                                        <div class="count-badge success">
                                            @customer.Orders.Count()
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="count-badge muted">0</div>
                                    }
                                </div>
                            </td>
                            <td class="text-center">
                                @if (customer.Orders.Any())
                                {
                                    <span class="status-badge active">
                                        <i class="fas fa-check-circle"></i>
                                        Ho?t ??ng
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge inactive">
                                        <i class="fas fa-clock"></i>
                                        Ch?a mua
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="action-buttons">
                                    <button onclick="viewCustomer(@customer.Id)" class="btn-action" title="Xem chi ti?t">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <a href="/Admin/Order?customerId=@customer.Id" class="btn-action" title="Xem ??n hàng">
                                        <i class="fas fa-shopping-cart"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Empty State (hidden by default) -->
            <div id="emptyState" class="empty-state" style="display: none;">
                <i class="fas fa-search fa-3x"></i>
                <h3>Không tìm th?y khách hàng</h3>
                <p>Th? thay ??i b? l?c ho?c t? khóa tìm ki?m</p>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-users fa-3x"></i>
                <h3>Ch?a có khách hàng nào</h3>
                <p>Khách hàng s? xu?t hi?n ? ?ây khi h? ??ng ký tài kho?n</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
