@model ShoesEcommerce.ViewModels.Staff.StaffListViewModel
@{
    ViewData["Title"] = "Quản lý Nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="staff-management">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">
                    <i class="fas fa-users me-2"></i>
                    Quản lý Nhân viên
                </h2>
                <p class="page-subtitle">Quản lý thông tin nhân viên và phân quyền</p>
            </div>
            <div class="page-actions">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    Thêm nhân viên
                </a>
                <a asp-action="Departments" class="btn btn-outline-secondary">
                    <i class="fas fa-building me-2"></i>
                    Phòng ban
                </a>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Tìm kiếm</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                           value="@(Model?.SearchTerm ?? "")" placeholder="Tên, email, hoặc số điện thoại...">
                </div>
                <div class="col-md-3">
                    <label for="departmentId" class="form-label">Phòng ban</label>
                    <select class="form-select" id="departmentId" name="departmentId">
                        <option value="">Tất cả phòng ban</option>
                        @if (ViewBag.Departments is SelectList departments)
                        {
                            @foreach (var item in departments)
                            {
                                <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="pageSize" class="form-label">Hiển thị</label>
                    <select class="form-select" name="pageSize">
                        <option value="10" selected="@((Model?.PageSize ?? 10) == 10)">10</option>
                        <option value="25" selected="@((Model?.PageSize ?? 10) == 25)">25</option>
                        <option value="50" selected="@((Model?.PageSize ?? 10) == 50)">50</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search me-1"></i>
                        Tìm kiếm
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-refresh me-1"></i>
                        Xóa bộ lọc
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Staff List -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    Danh sách nhân viên (@(Model?.TotalCount ?? 0))
                </h5>
                <div class="card-tools">
                    <button class="btn btn-sm btn-outline-primary" onclick="exportToExcel()">
                        <i class="fas fa-download me-1"></i>
                        Xuất Excel
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model?.Staffs != null && Model.Staffs.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nhân viên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Phòng ban</th>
                                <th>Quyền</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var staff in Model.Staffs)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar me-3">
                                                <div class="avatar-initial bg-primary text-white rounded-circle">
                                                    @((!string.IsNullOrEmpty(staff.FirstName) ? staff.FirstName.Substring(0, 1).ToUpper() : "?"))
                                                </div>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@(staff.FullName ?? "Chưa có tên")</h6>
                                                <small class="text-muted">ID: @staff.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(staff.Email))
                                        {
                                            <a href="mailto:@staff.Email" class="text-decoration-none">
                                                @staff.Email
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(staff.PhoneNumber))
                                        {
                                            <a href="tel:@staff.PhoneNumber" class="text-decoration-none">
                                                @staff.PhoneNumber
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@(staff.DepartmentName ?? "Chưa phân công")</span>
                                    </td>
                                    <td>
                                        @if (staff.RoleNames != null && staff.RoleNames.Any())
                                        {
                                            @foreach (var role in staff.RoleNames)
                                            {
                                                <span class="badge bg-info me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có quyền</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@staff.Id"
                                               class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@staff.Id"
                                               class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="ManageRoles" asp-route-id="@staff.Id"
                                               class="btn btn-sm btn-outline-success" title="Quản lý quyền">
                                                <i class="fas fa-user-shield"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@staff.Id"
                                               class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if ((Model?.TotalPages ?? 0) > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="Staff pagination">
                            <ul class="pagination justify-content-center mb-0">
                                <!-- Previous -->
                                <li class="page-item @((Model?.CurrentPage ?? 1) <= 1 ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@((Model?.CurrentPage ?? 1) - 1)"
                                       asp-route-searchTerm="@(Model?.SearchTerm)"
                                       asp-route-departmentId="@(Model?.DepartmentId)"
                                       asp-route-pageSize="@(Model?.PageSize)">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>

                                <!-- Page Numbers -->
                                @{
                                    int currentPage = Model?.CurrentPage ?? 1;
                                    int totalPages = Model?.TotalPages ?? 1;
                                    int startPage = Math.Max(1, currentPage - 2);
                                    int endPage = Math.Min(totalPages, currentPage + 2);
                                }

                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-page="@i"
                                           asp-route-searchTerm="@(Model?.SearchTerm)"
                                           asp-route-departmentId="@(Model?.DepartmentId)"
                                           asp-route-pageSize="@(Model?.PageSize)">
                                            @i
                                        </a>
                                    </li>
                                }

                                <!-- Next -->
                                <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@(currentPage + 1)"
                                       asp-route-searchTerm="@(Model?.SearchTerm)"
                                       asp-route-departmentId="@(Model?.DepartmentId)"
                                       asp-route-pageSize="@(Model?.PageSize)">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <div class="text-center mt-2">
                            <small class="text-muted">
                                Hiển thị @(((Model?.CurrentPage ?? 1) - 1) * (Model?.PageSize ?? 10) + 1) -
                                @(Math.Min((Model?.CurrentPage ?? 1) * (Model?.PageSize ?? 10), (Model?.TotalCount ?? 0)))
                                của @(Model?.TotalCount ?? 0) nhân viên
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5>Không có nhân viên nào</h5>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model?.SearchTerm) || (Model?.DepartmentId).HasValue)
                        {
                            <span>Không tìm thấy nhân viên phù hợp với bộ lọc.</span>
                        }
                        else
                        {
                            <span>Hãy thêm nhân viên đầu tiên.</span>
                        }
                    </p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>
                        Thêm nhân viên
                    </a>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function exportToExcel() {
            // Export functionality can be implemented here
            alert('Tính năng xuất Excel sẽ được pha trien trong tuong lai ');
        }
    </script>
}