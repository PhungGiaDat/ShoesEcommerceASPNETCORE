                                            var maxPrice = variants.Max(v => v.Price);
                                            if (minPrice == maxPrice)
                                            {
                                                <span class="price-single">@minPrice.ToString("N0") VN?</span>
                                            }
                                            else
                                            {
                                                <span class="price-range-text">@minPrice.ToString("N0") - @maxPrice.ToString("N0") VN?</span>
                                            }
                                        }
                                    </div>
                                </div>

