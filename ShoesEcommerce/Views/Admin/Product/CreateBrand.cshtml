@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        }
        
        .quick-link-card {
            transition: transform 0.2s ease-in-out;
        }
        
        .quick-link-card:hover {
            transform: translateY(-3px);
        }
        
        .required::after {
            content: " *";
            color: #dc3545;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }
        
        .brand-preview-card {
            border: 2px dashed #dee2e6;
            border-radius: 0.5rem;
            padding: 1.5rem;
            text-align: center;
            background: #f8f9fa;
            transition: all 0.3s ease;
        }
        
        .brand-preview-card.active {
            border-color: #28a745;
            background: rgba(40, 167, 69, 0.05);
        }
        
        .brand-icon {
            font-size: 2rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
        
        .brand-name {
            font-weight: 600;
            font-size: 1.1rem;
            color: #495057;
            margin-bottom: 0.25rem;
        }
        
        .form-text {
            font-size: 0.875em;
        }
        
        @@media (max-width: 768px) {
            .page-header .page-actions {
                margin-top: 1rem;
            }
            
            .quick-link-card {
                margin-bottom: 1rem;
            }
            
            .d-flex.gap-3.justify-content-between {
                flex-direction: column;
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Brand name preview
        document.addEventListener('DOMContentLoaded', function() {
            const nameInput = document.querySelector('input[name="Name"]');
            const previewName = document.getElementById('brandNamePreview');
            const previewCard = document.querySelector('.brand-preview-card');
            
            nameInput.addEventListener('input', function() {
                const value = this.value.trim();
                if (value) {
                    previewName.textContent = value;
                    previewCard.classList.add('active');
                } else {
                    previewName.textContent = 'Tên th??ng hi?u';
                    previewCard.classList.remove('active');
                }
            });

            // Add validation styling
            nameInput.addEventListener('blur', function() {
                if (this.value.trim()) {
                    this.classList.add('is-valid');
                    this.classList.remove('is-invalid');
                } else {
                    this.classList.add('is-invalid');
                    this.classList.remove('is-valid');
                }
            });

            // Remove validation on input
            nameInput.addEventListener('input', function() {
                this.classList.remove('is-invalid', 'is-valid');
            });
        });

        // Auto-uppercase first letter
        document.querySelector('input[name="Name"]').addEventListener('input', function() {
            let value = this.value;
            if (value.length > 0) {
                this.value = value.charAt(0).toUpperCase() + value.slice(1);
            }
        });

        // Success message handling
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            setTimeout(function() {
                window.location.href = '@Url.Action("Brands")';
            }, 2000);
            </text>
        }
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}