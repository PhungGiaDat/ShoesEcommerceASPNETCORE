}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const confirmationInput = document.getElementById('confirmationInput');
            const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
            const deleteForm = document.getElementById('deleteForm');
            const expectedText = '@Html.Raw(Model.Name)';
            
            console.log('Expected text:', expectedText);
            console.log('Delete confirmation setup complete');
            
            // Real-time validation
            confirmationInput.addEventListener('input', function() {
                const inputValue = this.value.trim();
                console.log('Input value:', inputValue);
                console.log('Expected value:', expectedText);
                console.log('Match:', inputValue === expectedText);
                
                const isValid = inputValue === expectedText;
                
                if (isValid) {
                    this.classList.add('valid');
                    this.classList.remove('is-invalid');
                    confirmDeleteBtn.disabled = false;
                    confirmDeleteBtn.classList.remove('btn-outline-danger');
                    confirmDeleteBtn.classList.add('btn-danger');
                    console.log('Button enabled');
                } else {
                    this.classList.remove('valid');
                    confirmDeleteBtn.disabled = true;
                    confirmDeleteBtn.classList.remove('btn-danger');
                    confirmDeleteBtn.classList.add('btn-outline-danger');
                    console.log('Button disabled');
                }
            });

            // Form submission validation
            deleteForm.addEventListener('submit', function(e) {
                const inputValue = confirmationInput.value.trim();
                if (inputValue !== expectedText) {
                    e.preventDefault();
                    alert('Vui lòng nh?p chính xác tên s?n ph?m ?? xác nh?n xóa!');
                    confirmationInput.focus();
                    return false;
                }
                
                // Final confirmation
                const finalConfirm = confirm(
                    `XÁC NH?N CU?I CÙNG!\n\n` +
                    `B?n có CH?C CH?N mu?n xóa v?nh vi?n s?n ph?m "${expectedText}"?\n\n` +
                    `Thao tác này KHÔNG TH? HOÀN TÁC!`
                );
                
                if (!finalConfirm) {
                    e.preventDefault();
                    return false;
                }
                
                // Show loading state
                confirmDeleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>?ang xóa...';
                confirmDeleteBtn.disabled = true;
            });

            // Prevent accidental form submission
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' && e.target !== confirmationInput) {
                    e.preventDefault();
                }
            });
            
            // Add focus to input for better UX
            confirmationInput.focus();
        });

        function showDeletePreview() {
            const modal = new bootstrap.Modal(document.getElementById('deletePreviewModal'));
            modal.show();
        }

        function focusConfirmationInput() {
            setTimeout(() => {
                document.getElementById('confirmationInput').focus();
            }, 300);
        }

        // Auto-hide alerts
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                if (alert.classList.contains('alert-dismissible')) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            });
        }, 10000);

        // Warn before leaving page
        let hasUnsavedChanges = false;
        document.getElementById('confirmationInput').addEventListener('input', function() {
            hasUnsavedChanges = this.value.trim().length > 0;
        });

        window.addEventListener('beforeunload', function(e) {
            if (hasUnsavedChanges) {
                e.preventDefault();
                e.returnValue = '';
            }
        });
    </script>
}