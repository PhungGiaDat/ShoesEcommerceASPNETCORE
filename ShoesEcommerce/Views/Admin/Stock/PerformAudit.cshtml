    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="background: #f9fafb; min-height: 100vh; padding: 24px;">
    <!-- Page Header -->
    <div style="background: white; border-radius: 8px; padding: 24px; margin-bottom: 24px; border: 1px solid #e5e7eb;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h4 style="margin: 0; color: #111827; font-weight: 600; font-size: 22px;">
                    <i class="fas fa-search" style="color: #4f46e5; margin-right: 8px; font-size: 16px;"></i>
                    Th?c hi?n ki?m kho
                </h4>
                <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">
                    Ki?m tra và c?p nh?t s? l??ng t?n kho th?c t?
                </p>
            </div>
            <div>
                <a href="/Admin/Stock/Check" class="btn btn-sm" 
                   style="background: #e0f2fe; color: #0d253f; border: none; padding: 8px 16px; border-radius: 6px; text-decoration: none; font-size: 13px;">
                    <i class="fas fa-arrow-left" style="margin-right: 4px;"></i> Quay l?i
