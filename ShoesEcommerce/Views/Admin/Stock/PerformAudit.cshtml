            </div>
        </div>
    </div>

    <!-- Audit Form -->
    <div style="max-width: 800px; margin: 0 auto;">
        <div style="background: white; border-radius: 8px; padding: 32px; border: 1px solid #e5e7eb;">
            <!-- Product Information -->
            <div style="background: #f3f4f6; border-radius: 6px; padding: 20px; margin-bottom: 24px; border-left: 4px solid #2563eb;">
                <div style="display: flex; align-items: center; gap: 16px;">
                    <div style="width: 56px; height: 56px; border-radius: 6px; background: #e0f2fe; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-box" style="font-size: 24px; color: #0d253f;"></i>
                    </div>
                    <div style="flex: 1;">
                        <h5 style="margin: 0 0 4px 0; font-weight: 600; color: #111827; font-size: 16px;">@Model.ProductName</h5>
                        <div style="display: flex; gap: 8px; align-items: center;">
                            <span style="background: #e7f3fe; padding: 2px 6px; border-radius: 4px; font-size: 12px; color: #2563eb;">
                                Màu: @Model.Color
                            </span>
                            <span style="background: #e7f3fe; padding: 2px 6px; border-radius: 4px; font-size: 12px; color: #2563eb;">
                                Size: @Model.Size
                            </span>
                        </div>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">S? l??ng h? th?ng</div>
                        <div style="font-size: 24px; font-weight: 700; color: #111827;">@Model.SystemQuantity</div>
                    </div>
                </div>
            </div>

            <form asp-action="PerformAudit" method="post">
                @Html.AntiForgeryToken()
                <input asp-for="ProductVariantId" type="hidden" />
                <input asp-for="ProductName" type="hidden" />
                <input asp-for="Color" type="hidden" />
                <input asp-for="Size" type="hidden" />
                <input asp-for="SystemQuantity" type="hidden" />

                <!-- Audit Information -->
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 32px; margin-bottom: 24px;">
                    <!-- Left Column -->
                    <div>
                        <h6 style="color: #111827; margin-bottom: 16px; font-size: 14px; font-weight: 600; padding-bottom: 8px; border-bottom: 2px solid #e5e7eb;">
                            <i class="fas fa-clipboard-check" style="color: #4f46e5; margin-right: 6px;"></i>
                            Thông tin ki?m tra
                        </h6>

                        <div style="margin-bottom: 16px;">
                            <label class="form-label" style="font-weight: 600; color: #111827; margin-bottom: 6px; display: block; font-size: 13px;">
                                S? l??ng h? th?ng
                            </label>
                            <div style="background: #f9fafb; border: 1px solid #e5e7eb; border-radius: 6px; padding: 12px; text-align: center;">
                                <span style="font-size: 20px; font-weight: bold; color: #374151;">@Model.SystemQuantity</span>
                                <div style="font-size: 11px; color: #6b7280; margin-top: 2px;">S? l??ng trong h? th?ng</div>
                            </div>
                        </div>

                        <div style="margin-bottom: 16px;">
                            <label asp-for="ActualQuantity" class="form-label" style="font-weight: 600; color: #111827; margin-bottom: 6px; display: block; font-size: 13px;">
                                S? l??ng th?c t? <span style="color: #ef4444;">*</span>
                            </label>
                            <input asp-for="ActualQuantity" type="number" min="0" class="form-control" 
                                   placeholder="Nh?p s? l??ng ??m ???c" required
                                   style="border: 1px solid #e5e7eb; border-radius: 6px; padding: 12px; font-size: 16px; text-align: center; font-weight: bold;"
                                   onchange="calculateDifference()">
                            <span asp-validation-for="ActualQuantity" class="text-danger" style="font-size: 11px;"></span>
                        </div>

                        <!-- Difference Display -->
                        <div style="margin-bottom: 16px;">
                            <label class="form-label" style="font-weight: 600; color: #111827; margin-bottom: 6px; display: block; font-size: 13px;">
                                Chênh l?ch
                            </label>
                            <div id="differenceDisplay" style="background: #f9fafb; border: 1px solid #e5e7eb; border-radius: 6px; padding: 12px; text-align: center;">
                                <span id="differenceValue" style="font-size: 18px; font-weight: bold;">0</span>
                                <div id="differenceText" style="font-size: 11px; color: #6b7280; margin-top: 2px;">Chênh l?ch</div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div>
                        <h6 style="color: #111827; margin-bottom: 16px; font-size: 14px; font-weight: 600; padding-bottom: 8px; border-bottom: 2px solid #e5e7eb;">
                            <i class="fas fa-user-edit" style="color: #34d399; margin-right: 6px;"></i>
                            Thông tin ng??i ki?m tra
                        </h6>

                        <div style="margin-bottom: 16px;">
                            <label asp-for="AuditedBy" class="form-label" style="font-weight: 600; color: #111827; margin-bottom: 6px; display: block; font-size: 13px;">
                                Ng??i ki?m tra <span style="color: #ef4444;">*</span>
                            </label>
                            <input asp-for="AuditedBy" type="text" class="form-control" 
                                   placeholder="Nh?p tên ng??i ki?m tra" required
                                   style="border: 1px solid #e5e7eb; border-radius: 6px; padding: 10px 12px; font-size: 14px;">
                            <span asp-validation-for="AuditedBy" class="text-danger" style="font-size: 11px;"></span>
                        </div>

                        <div style="margin-bottom: 16px;">
                            <label asp-for="Notes" class="form-label" style="font-weight: 600; color: #111827; margin-bottom: 6px; display: block; font-size: 13px;">
                                Ghi chú ki?m tra
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="4" 
                                      placeholder="Nh?p ghi chú v? quá trình ki?m kho (tùy ch?n)"
                                      style="border: 1px solid #e5e7eb; border-radius: 6px; padding: 10px 12px; font-size: 14px; resize: vertical;"></textarea>
                            <span asp-validation-for="Notes" class="text-danger" style="font-size: 11px;"></span>
                        </div>

                        <!-- Audit Guidelines -->
                        <div style="background: #eff6ff; border-left: 4px solid #3b82f6; padding: 12px; border-radius: 6px;">
                            <h6 style="color: #1e40af; margin-bottom: 8px; font-size: 12px; font-weight: 600;">
                                <i class="fas fa-info-circle"></i> H??ng d?n ki?m kho
                            </h6>
                            <ul style="margin: 0; padding-left: 16px; color: #1e40af; font-size: 11px; line-height: 1.6;">
                                <li>??m chính xác s? l??ng s?n ph?m th?c t?</li>
                                <li>Ki?m tra tình tr?ng s?n ph?m</li>
                                <li>Ghi chú các v?n ?? phát hi?n (n?u có)</li>
                                <li>??m b?o tính chính xác c?a vi?c ki?m ??m</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div style="display: flex; justify-content: space-between; align-items: center; padding-top: 20px; border-top: 1px solid #e5e7eb;">
                    <div>
                        <small style="color: #6b7280; font-size: 11px;">
                            <i class="fas fa-clock" style="margin-right: 4px;"></i>
                            Th?i gian ki?m tra: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                    
                    <div style="display: flex; gap: 8px;">
                        <a href="/Admin/Stock/Check" class="btn" style="background: #e0f2fe; color: #0d253f; border: none; padding: 10px 20px; border-radius: 6px; text-decoration: none; font-size: 13px;">
                            <i class="fas fa-times" style="margin-right: 4px;"></i>
                            H?y
                        </a>
                        <button type="submit" class="btn" style="background: #2563eb; color: white; border: none; padding: 10px 20px; border-radius: 6px; font-size: 13px;">
                            <i class="fas fa-check" style="margin-right: 4px;"></i>
                            Hoàn thành ki?m kho
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Quick Actions -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px; margin-top: 20px;">
            <div style="background: white; border: 1px solid #e5e7eb; border-radius: 6px; padding: 16px; text-align: center;">
                <i class="fas fa-balance-scale" style="font-size: 24px; color: #34d399; margin-bottom: 8px;"></i>
                <h6 style="margin: 0; color: #111827; font-size: 13px; font-weight: 600;">S? l??ng kh?p</h6>
                <p style="font-size: 11px; color: #6b7280; margin: 2px 0 0 0;">Nh?p s? l??ng b?ng h? th?ng</p>
            </div>
            
            <div style="background: white; border: 1px solid #e5e7eb; border-radius: 6px; padding: 16px; text-align: center;">
                <i class="fas fa-arrow-up" style="font-size: 24px; color: #2563eb; margin-bottom: 8px;"></i>
                <h6 style="margin: 0; color: #111827; font-size: 13px; font-weight: 600;">Th?a hàng</h6>
                <p style="font-size: 11px; color: #6b7280; margin: 2px 0 0 0;">S? l??ng th?c t? > h? th?ng</p>
            </div>
            
            <div style="background: white; border: 1px solid #e5e7eb; border-radius: 6px; padding: 16px; text-align: center;">
                <i class="fas fa-arrow-down" style="font-size: 24px; color: #ed8936; margin-bottom: 8px;"></i>
                <h6 style="margin: 0; color: #111827; font-size: 13px; font-weight: 600;">Thi?u hàng</h6>
                <p style="font-size: 11px; color: #6b7280; margin: 2px 0 0 0;">S? l??ng th?c t? < h? th?ng</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function calculateDifference() {
        const systemQuantity = @Model.SystemQuantity;
        const actualQuantity = parseInt(document.getElementById('ActualQuantity').value) || 0;
        const difference = actualQuantity - systemQuantity;
        
        const differenceValueEl = document.getElementById('differenceValue');
        const differenceTextEl = document.getElementById('differenceText');
        const differenceDisplayEl = document.getElementById('differenceDisplay');
        
        // Update difference value
        differenceValueEl.textContent = difference > 0 ? '+' + difference : difference;
        
        // Update styling and text based on difference
        if (difference === 0) {
            differenceDisplayEl.style.background = '#f0fff4';
            differenceDisplayEl.style.borderColor = '#48bb78';
            differenceValueEl.style.color = '#22543d';
            differenceTextEl.textContent = 'S? l??ng kh?p';
            differenceTextEl.style.color = '#22543d';
        } else if (difference > 0) {
            differenceDisplayEl.style.background = '#eff6ff';
            differenceDisplayEl.style.borderColor = '#4299e1';
            differenceValueEl.style.color = '#2d3748';
            differenceTextEl.textContent = 'Th?a ' + difference + ' s?n ph?m';
            differenceTextEl.style.color = '#2d3748';
        } else {
            differenceDisplayEl.style.background = '#fffaf0';
            differenceDisplayEl.style.borderColor = '#ed8936';
            differenceValueEl.style.color = '#9c4221';
            differenceTextEl.textContent = 'Thi?u ' + Math.abs(difference) + ' s?n ph?m';
            differenceTextEl.style.color = '#9c4221';
        }
    }

    // Initialize difference calculation
    document.addEventListener('DOMContentLoaded', function() {
        calculateDifference();
        document.getElementById('ActualQuantity').focus();
    });
</script>
}