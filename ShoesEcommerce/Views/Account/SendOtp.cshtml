@model ShoesEcommerce.ViewModels.Account.SendOtpViewModel
@{
    ViewData["Title"] = "Xác thực số điện thoại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="otp-page">
    <div class="otp-container">
        <!-- Left Side - Branding -->
        <div class="otp-brand">
            <div class="brand-content">
                <div class="brand-logo">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                    </svg>
                </div>
                <h1>Xác thực OTP</h1>
                <p class="tagline">Bảo mật tài khoản của bạn với xác thực SMS</p>
                
                <div class="features">
                    <div class="feature">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                        </svg>
                        <span>Bảo mật cao với mã OTP</span>
                    </div>
                    <div class="feature">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                        <span>Mã có hiệu lực trong 5 phút</span>
                    </div>
                    <div class="feature">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                            <polyline points="22 4 12 14.01 9 11.01"/>
                        </svg>
                        <span>Xác thực nhanh chóng</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="otp-form-wrapper">
            <div class="form-header">
                <h2>Nhập số điện thoại</h2>
                <p>Chúng tôi sẽ gửi mã xác thực 6 chữ số đến số điện thoại của bạn</p>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-error">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="15" y1="9" x2="9" y2="15"/>
                        <line x1="9" y1="9" x2="15" y2="15"/>
                    </svg>
                    <span>@TempData["ErrorMessage"]</span>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-error">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="8" x2="12" y2="12"/>
                        <line x1="12" y1="16" x2="12.01" y2="16"/>
                    </svg>
                    <div>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors).Take(3))
                        {
                            <span>@error.ErrorMessage</span>
                        }
                    </div>
                </div>
            }

            <form asp-action="SendOtp" method="post" id="sendOtpForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Purpose" />
                <input type="hidden" asp-for="ReturnUrl" />

                <!-- Phone Number -->
                <div class="form-group">
                    <label asp-for="PhoneNumber">Số điện thoại</label>
                    <div class="input-with-icon">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
                        </svg>
                        <input asp-for="PhoneNumber" class="form-input" placeholder="0901234567" type="tel" autocomplete="tel" inputmode="numeric" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="error-text"></span>
                    <p class="hint-text">Nhập số điện thoại Việt Nam (VD: 0901234567)</p>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn-submit" id="submitBtn">
                    <span class="btn-text">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="22" y1="2" x2="11" y2="13"></line>
                            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                        </svg>
                        Gửi mã OTP
                    </span>
                    <span class="btn-loading" style="display:none">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="spin">
                            <circle cx="12" cy="12" r="10"/>
                        </svg>
                        Đang gửi...
                    </span>
                </button>

                <!-- Back Link -->
                <div class="back-link">
                    <a href="@Url.Action("Login")">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="19" y1="12" x2="5" y2="12"></line>
                            <polyline points="12 19 5 12 12 5"></polyline>
                        </svg>
                        Quay lại đăng nhập
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
<style>
    :root {
        --color-black: #000000;
        --color-white: #ffffff;
        --color-gray-100: #f5f5f5;
        --color-gray-200: #e5e5e5;
        --color-gray-300: #d1d1d1;
        --color-gray-400: #a3a3a3;
        --color-gray-500: #737373;
        --color-gray-600: #525252;
        --color-gray-700: #404040;
        --color-gray-800: #262626;
        --color-error: #dc2626;
        --color-success: #16a34a;
    }

    .otp-page {
        min-height: calc(100vh - 200px);
        background: var(--color-gray-100);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .otp-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 900px;
        width: 100%;
        background: var(--color-white);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
    }

    /* Brand Side */
    .otp-brand {
        background: var(--color-black);
        color: var(--color-white);
        padding: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .brand-content {
        text-align: center;
    }

    .brand-logo {
        width: 80px;
        height: 80px;
        background: var(--color-white);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .brand-logo svg {
        color: var(--color-black);
    }

    .brand-content h1 {
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0 0 0.5rem;
        letter-spacing: -0.02em;
    }

    .tagline {
        font-size: 0.9rem;
        opacity: 0.7;
        margin-bottom: 2rem;
    }

    .features {
        text-align: left;
        margin-top: 2rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.6rem 0;
        font-size: 0.85rem;
        opacity: 0.9;
    }

    .feature svg {
        flex-shrink: 0;
        opacity: 0.7;
    }

    /* Form Side */
    .otp-form-wrapper {
        padding: 3rem;
    }

    .form-header {
        margin-bottom: 2rem;
    }

    .form-header h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 0.5rem;
        color: var(--color-gray-800);
        letter-spacing: -0.02em;
    }

    .form-header p {
        color: var(--color-gray-500);
        margin: 0;
        font-size: 0.9rem;
    }

    /* Alert */
    .alert {
        display: flex;
        gap: 0.75rem;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        align-items: flex-start;
    }

    .alert-error {
        background: #fef2f2;
        color: var(--color-error);
        border: 1px solid #fecaca;
    }

    .alert-error svg {
        flex-shrink: 0;
        margin-top: 2px;
    }

    /* Form */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group > label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--color-gray-700);
        margin-bottom: 0.5rem;
    }

    .form-input {
        width: 100%;
        padding: 0.875rem 1rem;
        padding-left: 2.75rem;
        border: 1px solid var(--color-gray-300);
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.2s;
        background: var(--color-white);
        color: var(--color-gray-800);
    }

    .form-input:focus {
        outline: none;
        border-color: var(--color-black);
        box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
    }

    .input-with-icon {
        position: relative;
    }

    .input-with-icon > svg:first-of-type {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--color-gray-400);
        pointer-events: none;
    }

    .error-text {
        display: block;
        font-size: 0.8rem;
        color: var(--color-error);
        margin-top: 0.25rem;
    }

    .hint-text {
        font-size: 0.8rem;
        color: var(--color-gray-500);
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    /* Submit Button */
    .btn-submit {
        width: 100%;
        padding: 0.875rem 1.5rem;
        background: var(--color-black);
        color: var(--color-white);
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-submit:hover {
        background: var(--color-gray-800);
    }

    .btn-submit:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-text, .btn-loading {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .spin {
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .otp-container {
            grid-template-columns: 1fr;
            max-width: 450px;
        }

        .otp-brand {
            display: none;
        }

        .otp-form-wrapper {
            padding: 2rem;
        }
    }
</style>
}

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('sendOtpForm');
    const submitBtn = document.getElementById('submitBtn');
    const phoneInput = document.querySelector('input[name="PhoneNumber"]');
    
    // Auto format phone number
    phoneInput.addEventListener('input', function(e) {
        // Only allow digits
        this.value = this.value.replace(/\D/g, '');
        
        // Limit to 10-11 digits
        if (this.value.length > 11) {
            this.value = this.value.slice(0, 11);
        }
    });
    
    // Form submission
    form.addEventListener('submit', function(e) {
        const phone = phoneInput.value;
        
        // Basic validation
        if (!phone || phone.length < 10) {
            e.preventDefault();
            return;
        }
        
        // Show loading state
        submitBtn.disabled = true;
        submitBtn.querySelector('.btn-text').style.display = 'none';
        submitBtn.querySelector('.btn-loading').style.display = 'flex';
        
        // Reset after 10 seconds if no response
        setTimeout(function() {
            submitBtn.disabled = false;
            submitBtn.querySelector('.btn-text').style.display = 'flex';
            submitBtn.querySelector('.btn-loading').style.display = 'none';
        }, 10000);
    });
    
    // Focus phone input
    phoneInput.focus();
});
</script>
}
