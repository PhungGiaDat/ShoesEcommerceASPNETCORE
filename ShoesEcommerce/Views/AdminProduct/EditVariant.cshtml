    }

    .upload-content { color: #6b7280; pointer-events: none; }
    .upload-content svg { margin-bottom: 0.75rem; }
    .upload-content p { margin: 0 0 0.25rem; font-size: 0.9375rem; }
    .upload-link { color: #111827; font-weight: 500; }
    .upload-hint { font-size: 0.8125rem; color: #9ca3af; }

    .upload-preview { position: relative; }
    .upload-preview img {
