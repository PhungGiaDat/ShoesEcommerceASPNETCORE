@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const uploadArea = document.getElementById('uploadArea');
        const uploadInput = document.getElementById('imageFile');
        const uploadContent = document.getElementById('uploadContent');
        const uploadPreview = document.getElementById('uploadPreview');
        const previewImg = document.getElementById('previewImg');
        const colorInput = document.getElementById('Color');
        const sizeInput = document.getElementById('Size');
        const priceInput = document.getElementById('Price');
        const keepCurrentImage = document.getElementById('keepCurrentImage');
        const imageUrlHidden = document.getElementById('imageUrlHidden');

        // Drag and drop
        if (uploadArea) {
            ['dragenter', 'dragover'].forEach(event => {
                uploadArea.addEventListener(event, e => {
                    e.preventDefault();
                    uploadArea.classList.add('dragover');
                });
            });

            ['dragleave', 'drop'].forEach(event => {
                uploadArea.addEventListener(event, e => {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                });
            });

            uploadArea.addEventListener('drop', e => {
                const files = e.dataTransfer.files;
                if (files.length) {
                    uploadInput.files = files;
                    showPreview(files[0]);
                }
            });
        }

        if (uploadInput) {
            uploadInput.addEventListener('change', function() {
                if (this.files.length) {
                    showPreview(this.files[0]);
                }
            });
        }

        function showPreview(file) {
            if (!file.type.startsWith('image/')) {
                alert('Vui lòng chọn file hình ảnh');
                return;
            }
            if (file.size > 5 * 1024 * 1024) {
                alert('File không được vượt quá 5MB');
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                previewImg.src = e.target.result;
                uploadContent.style.display = 'none';
                uploadPreview.style.display = 'block';
                updateSidebarPreview(e.target.result);
                keepCurrentImage.value = 'false';
            };
            reader.readAsDataURL(file);
        }

        function updateSidebarPreview(imgSrc) {
            const sidebarPreview = document.getElementById('sidebarPreview');
            if (imgSrc) {
                sidebarPreview.innerHTML = '<img src="' + imgSrc + '" alt="Preview" />';
            } else {
                sidebarPreview.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><circle cx="8.5" cy="8.5" r="1.5"></circle><polyline points="21 15 16 10 5 21"></polyline></svg>';
            }
        }

        window.clearUpload = function() {
            uploadInput.value = '';
            uploadContent.style.display = 'block';
            uploadPreview.style.display = 'none';
            keepCurrentImage.value = 'true';
            
            var currentImageBox = document.getElementById('currentImageBox');
            if (currentImageBox && currentImageBox.style.display !== 'none') {
                var currentImg = currentImageBox.querySelector('img');
                if (currentImg) {
                    updateSidebarPreview(currentImg.src);
                }
            } else {
                updateSidebarPreview(null);
            }
        };

        window.removeCurrentImage = function() {
            const currentImageBox = document.getElementById('currentImageBox');
            if (currentImageBox) {
                currentImageBox.style.display = 'none';
            }
            keepCurrentImage.value = 'false';
            imageUrlHidden.value = '';
            updateSidebarPreview(null);
        };

        // Live preview update
        function updatePreview() {
            const color = colorInput ? colorInput.value || 'Màu' : 'Màu';
            const size = sizeInput ? sizeInput.value || 'Size' : 'Size';
            const price = priceInput ? priceInput.value ? parseInt(priceInput.value).toLocaleString('vi-VN') : '0' : '0';
            
            const previewName = document.getElementById('previewName');
            const previewPrice = document.getElementById('previewPrice');
            
            if (previewName) previewName.textContent = color + ' - ' + size;
            if (previewPrice) previewPrice.textContent = price + '₫';
        }

        if (colorInput) colorInput.addEventListener('input', updatePreview);
        if (sizeInput) sizeInput.addEventListener('input', updatePreview);
        if (priceInput) priceInput.addEventListener('input', updatePreview);

        // Form submit
        const form = document.getElementById('editVariantForm');
        if (form) {
            form.addEventListener('submit', function() {
                const btn = document.getElementById('submitBtn');
                btn.disabled = true;
                btn.textContent = 'Đang lưu...';
            });
        }
    });
</script>
}
