@model ShoesEcommerce.ViewModels.Product.EditProductVariantViewModel
@{
    ViewData["Title"] = "Chỉnh sửa Phiên bản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb-nav">
        <a href="/Admin" class="breadcrumb-link">Dashboard</a>
        <span class="breadcrumb-sep">/</span>
        <a href="/Admin/Product" class="breadcrumb-link">Sản phẩm</a>
        <span class="breadcrumb-sep">/</span>
        <a href="/Admin/Product/Details/@Model.ProductId" class="breadcrumb-link">Chi tiết</a>
        <span class="breadcrumb-sep">/</span>
        <span class="breadcrumb-current">Chỉnh sửa phiên bản</span>
    </nav>

    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1>Chỉnh sửa phiên bản</h1>
            @if (ViewBag.Product != null)
            {
                <p>@ViewBag.Product.Name</p>
            }
        </div>
        <a href="/Admin/Product/Details/@Model.ProductId" class="btn-back">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="19" y1="12" x2="5" y2="12"></line>
                <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Quay lại
        </a>
    </div>

    <div class="form-layout">
        <!-- Main Form -->
        <div class="form-main">
            <form method="post" asp-action="EditVariant" id="editVariantForm" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="KeepCurrentImage" id="keepCurrentImage" value="true" />
                <input type="hidden" name="ImageUrl" id="imageUrlHidden" value="@Model.ImageUrl" />
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert-box error">
                        <ul class="error-list">
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                foreach (var error in modelState.Errors)
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            }
                        </ul>
                    </div>
                }

                <div class="form-section">
                    <div class="section-header">
                        <h2>Thông tin phiên bản</h2>
                    </div>
                    <div class="section-body">
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Color">Màu sắc <span class="required">*</span></label>
                                <input asp-for="Color" class="form-input" placeholder="VD: Đỏ, Xanh, Đen..." />
                                <span asp-validation-for="Color" class="field-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Size">Kích thước <span class="required">*</span></label>
                                <input asp-for="Size" class="form-input" placeholder="VD: 38, 39, M, L..." />
                                <span asp-validation-for="Size" class="field-error"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price">Giá bán (VNĐ) <span class="required">*</span></label>
                            <div class="input-with-suffix">
                                <input asp-for="Price" type="number" step="1" min="1" class="form-input" placeholder="250000" />
                                <span class="input-suffix">₫</span>
                            </div>
                            <span asp-validation-for="Price" class="field-error"></span>
                        </div>
                    </div>
                </div>

                <!-- Image Section -->
                <div class="form-section">
                    <div class="section-header">
                        <h2>Hình ảnh</h2>
                        <span class="optional-label">Tùy chọn</span>
                    </div>
                    <div class="section-body">
                        <!-- Current Image -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="current-image-box" id="currentImageBox">
                                <div class="current-image-header">
                                    <span class="current-image-label">Hình ảnh hiện tại</span>
                                    <button type="button" class="btn-remove-image" onclick="removeCurrentImage()">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <line x1="18" y1="6" x2="6" y2="18"></line>
                                            <line x1="6" y1="6" x2="18" y2="18"></line>
                                        </svg>
                                        Xóa ảnh
                                    </button>
                                </div>
                                <div class="current-image-preview">
                                    <img src="@Model.ImageUrl" alt="Current" onerror="this.parentElement.innerHTML='<p>Không tải được ảnh</p>'" />
                                </div>
                            </div>
                        }

                        <!-- Upload New Image -->
                        <div class="upload-section" id="uploadSection">
                            <label class="upload-label">@(string.IsNullOrEmpty(Model.ImageUrl) ? "Tải lên hình ảnh" : "Thay thế bằng ảnh mới")</label>
                            <div class="upload-area" id="uploadArea">
                                <input type="file" name="ImageFile" id="imageFile" accept="image/*" class="upload-input" />
                                <div class="upload-content" id="uploadContent">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                        <polyline points="21 15 16 10 5 21"></polyline>
                                    </svg>
                                    <p>Kéo thả hoặc <span class="upload-link">chọn file</span></p>
                                    <span class="upload-hint">JPG, PNG, WebP · Tối đa 5MB</span>
                                </div>
                                <div class="upload-preview" id="uploadPreview" style="display: none;">
                                    <img id="previewImg" src="#" alt="Preview" />
                                    <button type="button" class="remove-btn" onclick="clearUpload()">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <line x1="18" y1="6" x2="6" y2="18"></line>
                                            <line x1="6" y1="6" x2="18" y2="18"></line>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/Admin/Product/DeleteVariant/@Model.Id" class="btn-danger-outline">Xóa phiên bản</a>
                    <div class="actions-right">
                        <a href="/Admin/Product/Details/@Model.ProductId" class="btn-secondary">Hủy</a>
                        <button type="submit" class="btn-primary" id="submitBtn">Lưu thay đổi</button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Sidebar -->
        <div class="form-sidebar">
            <div class="sidebar-section preview-card">
                <h3>Xem trước</h3>
                <div class="variant-preview">
                    <div class="preview-image" id="sidebarPreview">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Preview" />
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                <polyline points="21 15 16 10 5 21"></polyline>
                            </svg>
                        }
                    </div>
                    <div class="preview-info">
                        <span class="preview-name" id="previewName">@Model.Color - @Model.Size</span>
                        <span class="preview-price" id="previewPrice">@Model.Price.ToString("N0")₫</span>
                    </div>
                </div>
            </div>

            <div class="sidebar-section info-box">
                <h4>Lưu ý</h4>
                <ul>
                    <li>Màu sắc và kích thước bắt buộc</li>
                    <li>Giá phải lớn hơn 0</li>
                    <li>Hình ảnh sẽ được upload lên cloud</li>
                    <li>Tồn kho được quản lý ở mục <strong>Nhập kho</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>

