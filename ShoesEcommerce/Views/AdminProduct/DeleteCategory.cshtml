@model ShoesEcommerce.Models.Products.Category
@{
    ViewData["Title"] = "Xóa Danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="max-width: 600px; margin: 0 auto; padding: 2rem;">
    <!-- Back Button -->
    <a href="/Admin/Product/Categories" style="display: inline-flex; align-items: center; gap: 0.5rem; color: #666; text-decoration: none; margin-bottom: 1.5rem;">
        <i class="fas fa-arrow-left"></i>
        Quay lại danh sách danh mục
    </a>

    <!-- Warning Card -->
    <div style="background: #fff; border-radius: 12px; border: 1px solid #fee2e2; overflow: hidden;">
        <!-- Header -->
        <div style="background: #fef2f2; padding: 1.5rem; border-bottom: 1px solid #fee2e2;">
            <div style="display: flex; align-items: center; gap: 1rem;">
                <div style="width: 48px; height: 48px; background: #ef4444; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-exclamation-triangle" style="color: #fff; font-size: 1.25rem;"></i>
                </div>
                <div>
                    <h2 style="margin: 0; font-size: 1.25rem; font-weight: 600; color: #991b1b;">Xác nhận xóa danh mục</h2>
                    <p style="margin: 0.25rem 0 0; color: #b91c1c; font-size: 0.875rem;">Hành động này không thể hoàn tác</p>
                </div>
            </div>
        </div>

        <!-- Body -->
        <div style="padding: 1.5rem;">
            <div style="background: #f9fafb; border-radius: 8px; padding: 1rem; margin-bottom: 1.5rem;">
                <div style="display: grid; gap: 0.75rem;">
                    <div style="display: flex; justify-content: space-between;">
                        <span style="color: #6b7280;">ID:</span>
                        <span style="font-weight: 600;">#@Model.Id</span>
                    </div>
                    <div style="display: flex; justify-content: space-between;">
                        <span style="color: #6b7280;">Tên danh mục:</span>
                        <span style="font-weight: 600;">@Model.Name</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: #6b7280;">Mô tả:</span>
                            <span style="font-weight: 500; color: #374151;">@Model.Description</span>
                        </div>
                    }
                    <div style="display: flex; justify-content: space-between;">
                        <span style="color: #6b7280;">Số sản phẩm:</span>
                        <span style="font-weight: 600; color: @(Model.Products?.Count > 0 ? "#ef4444" : "#10b981");">
                            @(Model.Products?.Count ?? 0) sản phẩm
                        </span>
                    </div>
                </div>
            </div>

            @if (Model.Products?.Count > 0)
            {
                <div style="background: #fef3c7; border: 1px solid #fcd34d; border-radius: 8px; padding: 1rem; margin-bottom: 1.5rem;">
                    <div style="display: flex; gap: 0.75rem;">
                        <i class="fas fa-info-circle" style="color: #d97706; margin-top: 2px;"></i>
                        <div>
                            <p style="margin: 0; font-weight: 600; color: #92400e;">Cảnh báo</p>
                            <p style="margin: 0.25rem 0 0; color: #a16207; font-size: 0.875rem;">
                                Danh mục này có @Model.Products.Count sản phẩm. Bạn cần di chuyển hoặc xóa các sản phẩm trước khi xóa danh mục.
                            </p>
                        </div>
                    </div>
                </div>
            }

            <!-- Actions -->
            <form asp-action="DeleteCategory" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div style="display: flex; gap: 1rem;">
                    <a href="/Admin/Product/Categories" 
                       style="flex: 1; display: inline-flex; align-items: center; justify-content: center; padding: 0.75rem 1.5rem; background: #f3f4f6; color: #374151; border-radius: 8px; text-decoration: none; font-weight: 500; transition: background 0.2s;">
                        Hủy bỏ
                    </a>
                    <button type="submit" 
                            style="flex: 1; display: inline-flex; align-items: center; justify-content: center; gap: 0.5rem; padding: 0.75rem 1.5rem; background: #ef4444; color: #fff; border: none; border-radius: 8px; font-weight: 500; cursor: pointer; transition: background 0.2s;"
                            @(Model.Products?.Count > 0 ? "disabled" : "")>
                        <i class="fas fa-trash"></i>
                        Xóa danh mục
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
