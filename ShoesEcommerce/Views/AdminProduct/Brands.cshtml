@model IEnumerable<ShoesEcommerce.ViewModels.Product.BrandInfo>
@{
    ViewData["Title"] = "Quản lý Thương hiệu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="brands-index">
    <!-- Page Header -->
    <div class="page-header bg-gradient-success text-white rounded-3 mb-4 p-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title mb-2">
                    <i class="fas fa-award me-2"></i>
                    Quản lý Thương hiệu
                </h2>
                <p class="page-subtitle mb-0 opacity-75">Quản lý danh sách các thương hiệu sản phẩm</p>
            </div>
            <div class="page-actions">
                <a asp-action="CreateBrand" class="btn btn-light btn-lg">
                    <i class="fas fa-plus me-2"></i>
                    Thêm thương hiệu
                </a>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm quick-stat-card bg-primary text-white">
                <div class="card-body text-center py-3">
                    <div class="quick-stat-icon">
                        <i class="fas fa-award fa-2x mb-2"></i>
                    </div>
                    <h4 class="quick-stat-number mb-1">@Model.Count()</h4>
                    <p class="quick-stat-label mb-0">Tổng thương hiệu</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm quick-stat-card bg-success text-white">
                <div class="card-body text-center py-3">
                    <div class="quick-stat-icon">
                        <i class="fas fa-cube fa-2x mb-2"></i>
                    </div>
                    <h4 class="quick-stat-number mb-1">@Model.Sum(b => b.ProductCount)</h4>
                    <p class="quick-stat-label mb-0">Tổng sản phẩm</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm quick-stat-card bg-info text-white">
                <div class="card-body text-center py-3">
                    <div class="quick-stat-icon">
                        <i class="fas fa-chart-line fa-2x mb-2"></i>
                    </div>
                    <h4 class="quick-stat-number mb-1">@(Model.Any() ? Model.Max(b => b.ProductCount) : 0)</h4>
                    <p class="quick-stat-label mb-0">Nhiều sản phẩm nhất</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm quick-stat-card bg-warning text-white">
                <div class="card-body text-center py-3">
                    <div class="quick-stat-icon">
                        <i class="fas fa-star fa-2x mb-2"></i>
                    </div>
                    <h4 class="quick-stat-number mb-1">@Model.Count(b => b.ProductCount > 0)</h4>
                    <p class="quick-stat-label mb-0">Có sản phẩm</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Brands List -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2 text-success"></i>
                    Danh sách thương hiệu
                </h5>
                <div class="card-actions">
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportData()">
                        <i class="fas fa-download me-1"></i>
                        Xuất Excel
                    </button>
                    <button type="button" class="btn btn-outline-primary btn-sm" onclick="refreshData()">
                        <i class="fas fa-refresh me-1"></i>
                        Làm mới
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;">
                                    <input type="checkbox" class="form-check-input" id="selectAll" onchange="toggleSelectAll()">
                                </th>
                                <th>ID</th>
                                <th>Tên thương hiệu</th>
                                <th>Số sản phẩm</th>
                                <th>Trạng thái</th>
                                <th style="width: 120px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var brand in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input brand-checkbox" value="@brand.Id">
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">#@brand.Id</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="brand-avatar bg-success text-white rounded-circle me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                <i class="fas fa-award"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@brand.Name</h6>
                                                <small class="text-muted">Thương hiệu #@brand.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (brand.ProductCount > 0)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fas fa-cube me-1"></i>
                                                @brand.ProductCount sản phẩm
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-minus me-1"></i>
                                                Chưa có sản phẩm
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (brand.ProductCount > 0)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>
                                                Đang sử dụng
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock me-1"></i>
                                                Chờ sản phẩm
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Index", new { brandId = brand.Id })"
                                               class="btn btn-outline-primary btn-sm"
                                               title="Xem sản phẩm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-outline-warning btn-sm"
                                                    title="Chỉnh sửa (Sắp có)"
                                                    onclick="alert('Tính năng chỉnh sửa thương hiệu sẽ được phát triển sớm!')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            @if (brand.ProductCount == 0)
                                            {
                                                <button type="button"
                                                        class="btn btn-outline-danger btn-sm"
                                                        title="Xoá thương hiệu (Sắp có)"
                                                        onclick="alert('Tính năng xoá thương hiệu sẽ được phát triển sớm!')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-award fa-4x text-muted mb-3"></i>
                        <h4>Chưa có thương hiệu nào</h4>
                        <p class="text-muted mb-4">Hệ thống chưa có thương hiệu nào. Hãy tạo thương hiệu đầu tiên để bắt đầu quản lý sản phẩm.</p>
                        <div class="d-flex gap-2 justify-content-center">
                            <a asp-action="CreateBrand" class="btn btn-success btn-lg">
                                <i class="fas fa-plus me-2"></i>
                                Thêm thương hiệu đầu tiên
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Quick Actions Panel -->
    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-bolt me-2"></i>
                            Thao tác nhanh
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-3 col-md-6 mb-2">
                                <button type="button" class="btn btn-outline-primary w-100" onclick="bulkEdit()">
                                    <i class="fas fa-edit me-2"></i>
                                    Chỉnh sửa hàng loạt
                                </button>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-2">
                                <button type="button" class="btn btn-outline-danger w-100" onclick="bulkDelete()">
                                    <i class="fas fa-trash me-2"></i>
                                    Xoá đã chọn
                                </button>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-2">
                                <a asp-action="Create" class="btn btn-outline-success w-100">
                                    <i class="fas fa-plus me-2"></i>
                                    Thêm sản phẩm mới
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-2">
                                <a asp-action="Categories" class="btn btn-outline-info w-100">
                                    <i class="fas fa-tags me-2"></i>
                                    Quản lý danh mục
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        }

        .quick-stat-card {
            transition: transform 0.2s ease-in-out;
        }

            .quick-stat-card:hover {
                transform: translateY(-3px);
            }

        .quick-stat-number {
            font-size: 2rem;
            font-weight: 700;
        }

        .quick-stat-label {
            font-size: 0.875rem;
            opacity: 0.9;
        }

        .brand-avatar {
            font-size: 1.2rem;
        }

        .empty-state i {
            opacity: 0.3;
        }

        .table th {
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .btn-group .btn {
            border: 1px solid #dee2e6;
        }

        .badge {
            font-size: 0.75em;
        }

        @@media (max-width: 768px) {
            .page-header .page-actions {
                margin-top: 1rem;
            }

            .quick-stat-card {
                margin-bottom: 1rem;
            }

            .card-actions {
                margin-top: 1rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.brand-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAll.checked;
            });
        }

        function bulkEdit() {
            const checkedBoxes = document.querySelectorAll('.brand-checkbox:checked');
            if (checkedBoxes.length === 0) {
                alert('Vui lòng chọn ít nhất một thương hiệu để chỉnh sửa');
                return;
            }

            // Implement bulk edit functionality
            alert('Tính năng chỉnh sửa hàng loạt sẽ được phát triển trong tương lai');
        }

        function bulkDelete() {
            const checkedBoxes = document.querySelectorAll('.brand-checkbox:checked');
            if (checkedBoxes.length === 0) {
                alert('Vui lòng chọn ít nhất một thương hiệu để xoá');
                return;
            }

            if (confirm(`Bạn có chắc chắn muốn xoá ${checkedBoxes.length} thương hiệu đã chọn?`)) {
                // Implement bulk delete functionality
                alert('Tính năng xoá hàng loạt sẽ được phát triển trong tương lai');
            }
        }

        function exportData() {
            // Export functionality can be implemented here
            alert('Tính năng xuất Excel sẽ được phát triển trong tương lai');
        }

        function refreshData() {
            window.location.reload();
        }

        // Auto-hide success messages after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert-success');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
