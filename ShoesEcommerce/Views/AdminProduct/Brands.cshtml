@model IEnumerable<ShoesEcommerce.ViewModels.Product.BrandInfo>
@{
    ViewData["Title"] = "Quản lý Thương hiệu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Minimalist Brand Management -->
<div class="minimalist-brand-management">
    <!-- Clean Header -->
    <div class="page-header-minimal">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h1 class="page-title-minimal">Quản lý Thương hiệu</h1>
                <p class="page-subtitle-minimal">Danh sách các thương hiệu sản phẩm trong hệ thống</p>
            </div>
            <div class="header-actions">
                <button onclick="exportBrands()" class="btn-minimal-outline">
                    <i class="fas fa-download me-2"></i>
                    Xuất Excel
                </button>
                <a asp-action="CreateBrand" class="btn-minimal-primary">
                    <i class="fas fa-plus me-2"></i>
                    Thêm thương hiệu
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-award"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@Model.Count()</div>
                <div class="stat-label">Tổng thương hiệu</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon success">
                <i class="fas fa-cube"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@Model.Sum(b => b.ProductCount)</div>
                <div class="stat-label">Tổng sản phẩm</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon info">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@(Model.Any() ? Model.Max(b => b.ProductCount) : 0)</div>
                <div class="stat-label">Nhiều sản phẩm nhất</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon warning">
                <i class="fas fa-star"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@Model.Count(b => b.ProductCount > 0)</div>
                <div class="stat-label">Có sản phẩm</div>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-minimal alert-minimal-success">
            <i class="fas fa-check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
            <button onclick="this.parentElement.remove()" class="alert-close">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-minimal alert-minimal-danger">
            <i class="fas fa-exclamation-circle"></i>
            <span>@TempData["ErrorMessage"]</span>
            <button onclick="this.parentElement.remove()" class="alert-close">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="search-box">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" class="search-input" 
                   placeholder="Tìm kiếm thương hiệu theo tên..." 
                   onkeyup="filterBrands()">
        </div>

        <div class="filter-actions">
            <button onclick="filterByStatus('all')" class="filter-btn active" data-filter="all">
                Tất cả (@Model.Count())
            </button>
            <button onclick="filterByStatus('active')" class="filter-btn" data-filter="active">
                Có sản phẩm (@Model.Count(b => b.ProductCount > 0))
            </button>
            <button onclick="filterByStatus('inactive')" class="filter-btn" data-filter="inactive">
                Chưa có sản phẩm (@Model.Count(b => b.ProductCount == 0))
            </button>
        </div>
    </div>

    <!-- Brands Table -->
    <div class="table-container">
        <div class="table-header">
            <h3 class="table-title">
                <i class="fas fa-award me-2"></i>
                Danh sách thương hiệu
            </h3>
            <div class="table-tools">
                <button onclick="refreshData()" class="btn-tool">
                    <i class="fas fa-redo me-1"></i>
                    Làm mới
                </button>
            </div>
        </div>

        @if (Model.Any())
        {
            <table class="minimalist-table" id="brandsTable">
                <thead>
                    <tr>
                        <th width="50">
                            <input type="checkbox" class="checkbox-minimal" id="selectAll" onchange="toggleSelectAll()">
                        </th>
                        <th width="80">ID</th>
                        <th>Thương hiệu</th>
                        <th class="text-center" width="150">Số sản phẩm</th>
                        <th class="text-center" width="120">Trạng thái</th>
                        <th class="text-center" width="120">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="brandTableBody">
                    @foreach (var brand in Model)
                    {
                        <tr class="brand-row" data-status="@(brand.ProductCount > 0 ? "active" : "inactive")">
                            <td>
                                <input type="checkbox" class="checkbox-minimal brand-checkbox" value="@brand.Id">
                            </td>
                            <td>
                                <span class="id-badge">#@brand.Id</span>
                            </td>
                            <td>
                                <div class="brand-info">
                                    <div class="brand-icon">
                                        <i class="fas fa-award"></i>
                                    </div>
                                    <div class="brand-details">
                                        <div class="brand-name">@brand.Name</div>
                                        <div class="brand-subtitle">Thương hiệu #@brand.Id</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                @if (brand.ProductCount > 0)
                                {
                                    <span class="count-badge success">
                                        <i class="fas fa-cube me-1"></i>
                                        @brand.ProductCount
                                    </span>
                                }
                                else
                                {
                                    <span class="count-badge muted">
                                        <i class="fas fa-minus me-1"></i>
                                        0
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                @if (brand.ProductCount > 0)
                                {
                                    <span class="status-badge active">
                                        <i class="fas fa-check-circle"></i>
                                        Đang sử dụng
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge inactive">
                                        <i class="fas fa-clock"></i>
                                        Chờ sản phẩm
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="action-buttons">
                                    <a href="@Url.Action("Index", new { brandId = brand.Id })" 
                                       class="btn-action" 
                                       title="Xem sản phẩm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button onclick="editBrand(@brand.Id)" 
                                            class="btn-action" 
                                            title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    @if (brand.ProductCount == 0)
                                    {
                                        <button onclick="deleteBrand(@brand.Id)" 
                                                class="btn-action danger" 
                                                title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Empty State (hidden by default) -->
            <div id="emptyState" class="empty-state" style="display: none;">
                <i class="fas fa-search fa-3x"></i>
                <h3>Không tìm thấy thương hiệu</h3>
                <p>Thử thay đổi bộ lọc hoặc từ khóa tìm kiếm</p>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-award fa-3x"></i>
                <h3>Chưa có thương hiệu nào</h3>
                <p>Hệ thống chưa có thương hiệu nào. Hãy tạo thương hiệu đầu tiên để bắt đầu.</p>
                <div class="empty-actions">
                    <a asp-action="CreateBrand" class="btn-minimal-primary">
                        <i class="fas fa-plus me-2"></i>
                        Thêm thương hiệu đầu tiên
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Quick Actions (Only show if there are brands) -->
    @if (Model.Any())
    {
        <div class="quick-actions-panel">
            <div class="panel-header">
                <h3 class="panel-title">
                    <i class="fas fa-bolt me-2"></i>
                    Thao tác nhanh
                </h3>
            </div>
            <div class="panel-body">
                <div class="quick-actions-grid">
                    <a asp-action="Create" class="quick-action-btn">
                        <i class="fas fa-plus"></i>
                        <span>Thêm sản phẩm mới</span>
                    </a>
                    <a asp-action="Categories" class="quick-action-btn">
                        <i class="fas fa-tags"></i>
                        <span>Quản lý danh mục</span>
                    </a>
                    <button onclick="bulkDelete()" class="quick-action-btn danger">
                        <i class="fas fa-trash"></i>
                        <span>Xóa đã chọn</span>
                    </button>
                    <a asp-action="Index" class="quick-action-btn">
                        <i class="fas fa-shopping-bag"></i>
                        <span>Quản lý sản phẩm</span>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        /* ===== COLOR PALETTE ===== */
        :root {
            --white: #ffffff;
            --gray-50: #fafafa;
            --gray-100: #f5f5f5;
            --gray-200: #eeeeee;
            --gray-300: #e0e0e0;
            --gray-400: #bdbdbd;
            --gray-500: #9e9e9e;
            --gray-600: #757575;
            --gray-700: #616161;
            --gray-800: #424242;
            --gray-900: #212121;
            
            --success: #27ae60;
            --warning: #f39c12;
            --info: #3498db;
            --danger: #e74c3c;
            
            --border-radius: 8px;
            --transition: all 0.2s ease;
        }

        /* ===== CONTAINER ===== */
        .minimalist-brand-management {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        /* ===== PAGE HEADER ===== */
        .page-header-minimal {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .page-title-minimal {
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 0.5rem 0;
            letter-spacing: -0.02em;
        }

        .page-subtitle-minimal {
            font-size: 0.95rem;
            color: var(--gray-600);
            margin: 0;
        }

        .header-actions {
            display: flex;
            gap: 0.75rem;
        }

        /* ===== BUTTONS ===== */
        .btn-minimal-primary {
            display: inline-flex;
            align-items: center;
            padding: 0.65rem 1.25rem;
            background: var(--gray-900);
            border: 1px solid var(--gray-900);
            border-radius: var(--border-radius);
            color: var(--white);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: var(--transition);
            cursor: pointer;
        }

        .btn-minimal-primary:hover {
            background: var(--gray-800);
            border-color: var(--gray-800);
            color: var(--white);
        }

        .btn-minimal-outline {
            display: inline-flex;
            align-items: center;
            padding: 0.65rem 1.25rem;
            background: var(--white);
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            color: var(--gray-700);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: var(--transition);
            cursor: pointer;
        }

        .btn-minimal-outline:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
            color: var(--gray-900);
        }

        /* ===== STATS GRID ===== */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: var(--transition);
        }

        .stat-card:hover {
            border-color: var(--gray-300);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: var(--gray-100);
            color: var(--gray-700);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .stat-icon.success {
            background: rgba(39, 174, 96, 0.1);
            color: var(--success);
        }

        .stat-icon.warning {
            background: rgba(243, 156, 18, 0.1);
            color: var(--warning);
        }

        .stat-icon.info {
            background: rgba(52, 152, 219, 0.1);
            color: var(--info);
        }

        .stat-content {
            flex: 1;
        }

        .stat-value {
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--gray-900);
            line-height: 1;
            margin-bottom: 0.25rem;
        }

        .stat-label {
            font-size: 0.875rem;
            color: var(--gray-600);
        }

        /* ===== ALERTS ===== */
        .alert-minimal {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 1.25rem;
            border-radius: var(--border-radius);
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }

        .alert-minimal i {
            font-size: 1.1rem;
        }

        .alert-minimal-success {
            background: rgba(39, 174, 96, 0.1);
            color: var(--success);
            border: 1px solid rgba(39, 174, 96, 0.2);
        }

        .alert-minimal-danger {
            background: rgba(231, 76, 60, 0.1);
            color: var(--danger);
            border: 1px solid rgba(231, 76, 60, 0.2);
        }

        .alert-close {
            margin-left: auto;
            background: none;
            border: none;
            color: inherit;
            opacity: 0.7;
            cursor: pointer;
            padding: 0.25rem;
        }

        .alert-close:hover {
            opacity: 1;
        }

        /* ===== FILTER SECTION ===== */
        .filter-section {
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .search-box {
            position: relative;
            margin-bottom: 1rem;
        }

        .search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-500);
            font-size: 0.9rem;
        }

        .search-input {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.75rem;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            font-size: 0.95rem;
            transition: var(--transition);
        }

        .search-input:focus {
            outline: none;
            border-color: var(--gray-900);
            box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
        }

        .filter-actions {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
        }

        .filter-btn {
            padding: 0.5rem 1rem;
            background: var(--white);
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            color: var(--gray-700);
            font-size: 0.875rem;
            cursor: pointer;
            transition: var(--transition);
        }

        .filter-btn:hover {
            background: var(--gray-50);
        }

        .filter-btn.active {
            background: var(--gray-900);
            border-color: var(--gray-900);
            color: var(--white);
        }

        /* ===== TABLE ===== */
        .table-container {
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: var(--border-radius);
            overflow: hidden;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .table-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0;
            display: flex;
            align-items: center;
        }

        .table-tools {
            display: flex;
            gap: 0.5rem;
        }

        .btn-tool {
            padding: 0.5rem 1rem;
            background: var(--white);
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            color: var(--gray-700);
            font-size: 0.875rem;
            cursor: pointer;
            transition: var(--transition);
        }

        .btn-tool:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
        }

        .minimalist-table {
            width: 100%;
            border-collapse: collapse;
        }

        .minimalist-table thead {
            background: var(--gray-50);
        }

        .minimalist-table th {
            padding: 1rem 1.25rem;
            text-align: left;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-700);
            border-bottom: 1px solid var(--gray-200);
        }

        .minimalist-table td {
            padding: 1rem 1.25rem;
            border-bottom: 1px solid var(--gray-100);
            font-size: 0.9rem;
            color: var(--gray-800);
        }

        .minimalist-table tbody tr:hover {
            background: var(--gray-50);
        }

        .minimalist-table tbody tr:last-child td {
            border-bottom: none;
        }

        /* ===== BRAND INFO ===== */
        .id-badge {
            font-family: monospace;
            color: var(--gray-600);
            font-size: 0.85rem;
            font-weight: 600;
        }

        .brand-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .brand-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--gray-100);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--gray-600);
            flex-shrink: 0;
        }

        .brand-details {
            flex: 1;
        }

        .brand-name {
            font-weight: 500;
            color: var(--gray-900);
            margin-bottom: 0.25rem;
        }

        .brand-subtitle {
            font-size: 0.8rem;
            color: var(--gray-600);
        }

        /* ===== BADGES ===== */
        .count-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.375rem 0.75rem;
            border-radius: var(--border-radius);
            font-size: 0.85rem;
            font-weight: 500;
        }

        .count-badge.success {
            background: rgba(39, 174, 96, 0.1);
            color: var(--success);
        }

        .count-badge.muted {
            background: var(--gray-100);
            color: var(--gray-600);
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.375rem 0.75rem;
            border-radius: var(--border-radius);
            font-size: 0.8rem;
            font-weight: 500;
        }

        .status-badge.active {
            background: rgba(39, 174, 96, 0.1);
            color: var(--success);
        }

        .status-badge.inactive {
            background: var(--gray-100);
            color: var(--gray-600);
        }

        .status-badge i {
            font-size: 0.75rem;
        }

        /* ===== ACTION BUTTONS ===== */
        .action-buttons {
            display: flex;
            gap: 0.375rem;
            justify-content: center;
        }

        .btn-action {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            background: var(--white);
            color: var(--gray-700);
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
        }

        .btn-action:hover {
            background: var(--gray-900);
            border-color: var(--gray-900);
            color: var(--white);
        }

        .btn-action.danger:hover {
            background: var(--danger);
            border-color: var(--danger);
            color: var(--white);
        }

        .btn-action i {
            font-size: 0.875rem;
        }

        /* ===== CHECKBOX ===== */
        .checkbox-minimal {
            width: 16px;
            height: 16px;
            border: 1px solid var(--gray-400);
            border-radius: 4px;
            cursor: pointer;
        }

        /* ===== EMPTY STATE ===== */
        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
        }

        .empty-state i {
            color: var(--gray-300);
            margin-bottom: 1.5rem;
        }

        .empty-state h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--gray-600);
            margin: 0 0 1.5rem 0;
        }

        .empty-actions {
            display: flex;
            gap: 0.75rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        /* ===== QUICK ACTIONS PANEL ===== */
        .quick-actions-panel {
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: var(--border-radius);
            margin-top: 2rem;
            overflow: hidden;
        }

        .panel-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            background: var(--gray-50);
        }

        .panel-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0;
            display: flex;
            align-items: center;
        }

        .panel-body {
            padding: 1.5rem;
        }

        .quick-actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .quick-action-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
            padding: 1.25rem 1rem;
            background: var(--white);
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            color: var(--gray-700);
            text-decoration: none;
            transition: var(--transition);
            cursor: pointer;
        }

        .quick-action-btn:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
        }

