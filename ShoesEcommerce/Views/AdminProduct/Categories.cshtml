@model IEnumerable<ShoesEcommerce.ViewModels.Product.CategoryInfo>
@{
    ViewData["Title"] = "Quản lý Danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var totalProducts = Model?.Sum(c => c.ProductCount) ?? 0;
    var categoryCount = Model?.Count() ?? 0;
}

<div class="page-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1>Danh mục</h1>
            <p>@categoryCount danh mục · @totalProducts sản phẩm</p>
        </div>
        <a href="/Admin/Product/CreateCategory" class="btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Thêm danh mục
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-box success">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-box error">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="15" y1="9" x2="9" y2="15"></line>
                <line x1="9" y1="9" x2="15" y2="15"></line>
            </svg>
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Categories -->
    @if (Model != null && Model.Any())
    {
        <div class="categories-list">
            @foreach (var category in Model)
            {
                <div class="category-item">
                    <div class="category-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                            <line x1="7" y1="7" x2="7.01" y2="7"></line>
                        </svg>
                    </div>
                    <div class="category-info">
                        <h3 class="category-name">@category.Name</h3>
                        <span class="category-count">@category.ProductCount sản phẩm</span>
                    </div>
                    <div class="category-actions">
                        <a href="/Admin/Product?categoryId=@category.Id" class="action-btn" title="Xem sản phẩm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                        </a>
                        <a href="/Admin/Product/EditCategory/@category.Id" class="action-btn" title="Chỉnh sửa">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg>
                        </a>
                        <button class="action-btn danger" onclick="deleteCategory(@category.Id, '@category.Name')" title="Xóa">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                    <line x1="7" y1="7" x2="7.01" y2="7"></line>
                </svg>
            </div>
            <h3>Chưa có danh mục nào</h3>
            <p>Tạo danh mục đầu tiên để phân loại sản phẩm</p>
            <a href="/Admin/Product/CreateCategory" class="btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Tạo danh mục
            </a>
        </div>
    }
</div>

<!-- Delete Modal -->
<div class="modal-overlay" id="deleteModal">
    <div class="modal-box">
        <div class="modal-header">
            <h3>Xóa danh mục</h3>
        </div>
        <div class="modal-body">
            <p>Bạn có chắc chắn muốn xóa danh mục <strong id="categoryNameToDelete"></strong>?</p>
            <p class="modal-note">Sản phẩm trong danh mục này sẽ cần được chuyển sang danh mục khác.</p>
        </div>
        <div class="modal-footer">
            <button class="btn-secondary" onclick="closeModal()">Hủy</button>
            <form id="deleteForm" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn-danger">Xóa</button>
            </form>
        </div>
    </div>
</div>

@section Styles {
<style>
    .page-container {
        max-width: 800px;
        margin: 0 auto;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #e5e7eb;
    }

    .header-content h1 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #111827;
        margin: 0 0 0.25rem;
    }

    .header-content p {
        font-size: 0.875rem;
        color: #6b7280;
        margin: 0;
    }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        background: #111827;
        border: none;
        border-radius: 8px;
        color: #fff;
        font-size: 0.875rem;
        font-weight: 500;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.15s;
    }

    .btn-primary:hover {
        background: #1f2937;
        color: #fff;
    }

    /* Alerts */
    .alert-box {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        font-size: 0.875rem;
    }

    .alert-box.success {
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        color: #166534;
    }

    .alert-box.error {
        background: #fef2f2;
        border: 1px solid #fecaca;
        color: #991b1b;
    }

    /* Categories List */
    .categories-list {
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        overflow: hidden;
    }

    .category-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid #f3f4f6;
        transition: background 0.15s;
    }

    .category-item:last-child {
        border-bottom: none;
    }

    .category-item:hover {
        background: #fafafa;
    }

    .category-icon {
        width: 40px;
        height: 40px;
        background: #f3f4f6;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6b7280;
        flex-shrink: 0;
    }

    .category-info {
        flex: 1;
        min-width: 0;
    }

    .category-name {
        font-size: 0.9375rem;
        font-weight: 500;
        color: #111827;
        margin: 0 0 0.125rem;
    }

    .category-count {
        font-size: 0.8125rem;
        color: #6b7280;
    }

    .category-actions {
        display: flex;
        gap: 0.375rem;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        background: transparent;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        color: #6b7280;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.15s;
        text-decoration: none;
    }

    .action-btn:hover {
        border-color: #d1d5db;
        color: #111827;
        background: #f9fafb;
    }

    .action-btn.danger:hover {
        border-color: #fecaca;
        background: #fef2f2;
        color: #dc2626;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
    }

    .empty-icon {
        width: 80px;
        height: 80px;
        background: #f3f4f6;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: #9ca3af;
    }

    .empty-state h3 {
        font-size: 1.125rem;
        font-weight: 600;
        color: #111827;
        margin: 0 0 0.5rem;
    }

    .empty-state p {
        font-size: 0.9375rem;
        color: #6b7280;
        margin: 0 0 1.5rem;
    }

    /* Modal */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.4);
        z-index: 1000;
        align-items: center;
        justify-content: center;
    }

    .modal-overlay.show {
        display: flex;
    }

    .modal-box {
        background: #fff;
        border-radius: 12px;
        width: 90%;
        max-width: 400px;
        overflow: hidden;
    }

    .modal-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #f3f4f6;
    }

    .modal-header h3 {
        font-size: 1rem;
        font-weight: 600;
        color: #111827;
        margin: 0;
    }

    .modal-body {
        padding: 1.25rem 1.5rem;
    }

    .modal-body p {
        font-size: 0.9375rem;
        color: #374151;
        margin: 0 0 0.5rem;
    }

    .modal-note {
        font-size: 0.8125rem;
        color: #9ca3af;
    }

    .modal-footer {
        padding: 1rem 1.5rem;
        background: #f9fafb;
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
    }

    .btn-secondary,
    .btn-danger {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.15s;
    }

    .btn-secondary {
        background: #fff;
        border: 1px solid #e5e7eb;
        color: #374151;
    }

    .btn-secondary:hover {
        background: #f9fafb;
    }

    .btn-danger {
        background: #dc2626;
        border: none;
        color: #fff;
    }

    .btn-danger:hover {
        background: #b91c1c;
    }

    @@media (max-width: 640px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
    }
</style>
}

@section Scripts {
<script>
    function deleteCategory(id, name) {
        document.getElementById('categoryNameToDelete').textContent = name;
        document.getElementById('deleteForm').action = '/Admin/Product/DeleteCategory/' + id;
        document.getElementById('deleteModal').classList.add('show');
    }

    function closeModal() {
        document.getElementById('deleteModal').classList.remove('show');
    }

    document.getElementById('deleteModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
    });

    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeModal();
    });
</script>
}
