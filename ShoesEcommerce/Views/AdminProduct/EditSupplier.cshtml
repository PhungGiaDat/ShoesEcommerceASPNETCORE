@model ShoesEcommerce.ViewModels.Product.EditSupplierViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Nhà cung cấp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="background: #f8f9fa; min-height: 100vh; padding: 20px;">
    <!-- Page Header -->
    <div style="background: white; border-radius: 8px; padding: 24px; margin-bottom: 24px; border: 1px solid #e9ecef;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h4 style="margin: 0; color: #2d3748; font-weight: 600; font-size: 20px;">
                    <i class="fas fa-edit" style="color: #718096; margin-right: 8px; font-size: 16px;"></i>
                    Chỉnh sửa nhà cung cấp
                </h4>
                <p style="margin: 4px 0 0 0; color: #718096; font-size: 14px;">
                    Cập nhật thông tin nhà cung cấp ID: @Model.Id
                </p>
            </div>
            <div>
                <a href="@Url.Action("Suppliers")" class="btn btn-sm"
                   style="background: #e2e8f0; color: #4a5568; border: none; padding: 8px 16px; border-radius: 6px; text-decoration: none; font-size: 13px;">
                    <i class="fas fa-arrow-left" style="margin-right: 4px;"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <div style="max-width: 600px; margin: 0 auto;">
        <div style="background: white; border-radius: 8px; padding: 32px; border: 1px solid #e9ecef;">
            <form asp-action="EditSupplier" method="post">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />

                <div style="margin-bottom: 24px;">
                    <label asp-for="Name" class="form-label" style="font-weight: 600; color: #2d3748; margin-bottom: 8px; display: block; font-size: 14px;">
                        Tên nhà cung cấp <span style="color: #f56565;">*</span>
                    </label>
                    <input asp-for="Name" type="text" class="form-control"
                           placeholder="Nhập tên nhà cung cấp" required
                           style="border: 1px solid #e2e8f0; border-radius: 6px; padding: 12px; font-size: 14px;">
                    <span asp-validation-for="Name" class="text-danger" style="font-size: 12px;"></span>
                </div>

                <div style="margin-bottom: 24px;">
                    <label asp-for="ContactInfo" class="form-label" style="font-weight: 600; color: #2d3748; margin-bottom: 8px; display: block; font-size: 14px;">
                        Thông tin liên hệ
                    </label>
                    <textarea asp-for="ContactInfo" class="form-control" rows="3"
                              placeholder="Nhập thông tin liên hệ (email, số điện thoại, địa chỉ)"
                              style="border: 1px solid #e2e8f0; border-radius: 6px; padding: 12px; font-size: 14px; resize: vertical;"></textarea>
                    <span asp-validation-for="ContactInfo" class="text-danger" style="font-size: 12px;"></span>
                    <small style="color: #718096; font-size: 12px; margin-top: 4px; display: block;">
                        Ví dụ: nike@vietnam.com - 0901234567 - Số 123 đường ABC, Quận XYZ
                    </small>
                </div>

                <!-- Information -->
                <div style="background: #f0fff4; border-left: 3px solid #48bb78; padding: 16px; border-radius: 6px; margin-bottom: 24px;">
                    <h6 style="color: #22543d; margin-bottom: 8px; font-size: 13px; font-weight: 600;">
                        <i class="fas fa-info-circle"></i> Thông tin cập nhật
                    </h6>
                    <ul style="margin: 0; padding-left: 16px; color: #22543d; font-size: 12px; line-height: 1.4;">
                        <li>Cập nhật thông tin sẽ ảnh hưởng đến tất cả phiếu nhập trong tương lai</li>
                        <li>Các phiếu nhập đã tồn tại sẽ không bị thay đổi</li>
                        <li>Đảm bảo thông tin liên hệ chính xác để dễ dàng liên lạc</li>
                    </ul>
                </div>

                <!-- Form Actions -->
                <div style="display: flex; justify-content: space-between; align-items: center; padding-top: 20px; border-top: 1px solid #e2e8f0;">
                    <div>
                        <small style="color: #718096; font-size: 11px;">
                            <i class="fas fa-asterisk" style="margin-right: 4px; color: #f56565;"></i>
                            Các trường có dấu <span style="color: #f56565;">*</span> là bắt buộc
                        </small>
                    </div>

                    <div style="display: flex; gap: 8px;">
                        <a href="@Url.Action("Suppliers")" class="btn"
                           style="background: #e2e8f0; color: #4a5568; border: none; padding: 10px 20px; border-radius: 6px; text-decoration: none; font-size: 13px;">
                            <i class="fas fa-times" style="margin-right: 4px;"></i>
                            Huỷ
                        </a>
                        <button type="submit" class="btn"
                                style="background: #4299e1; color: white; border: none; padding: 10px 20px; border-radius: 6px; font-size: 13px;">
                            <i class="fas fa-save" style="margin-right: 4px;"></i>
                            Cập nhật
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}