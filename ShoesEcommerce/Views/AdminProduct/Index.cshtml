@model ShoesEcommerce.ViewModels.Product.ProductListViewModel
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Minimalist Product Management -->
<div class="minimalist-product-management">
    <!-- Clean Header -->
    <div class="page-header-minimal">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h1 class="page-title-minimal">Quản lý Sản phẩm</h1>
                <p class="page-subtitle-minimal">Quản lý sản phẩm, danh mục và thương hiệu</p>
            </div>
            <div class="header-actions">
                <a asp-action="Create" class="btn-minimal-primary">
                    <i class="fas fa-plus me-2"></i>
                    Thêm sản phẩm
                </a>
            </div>
        </div>
    </div>

    <!-- Quick Action Cards -->
    <div class="quick-actions-grid">
        <a asp-action="Categories" class="quick-action-card">
            <div class="quick-action-icon">
                <i class="fas fa-tags"></i>
            </div>
            <div class="quick-action-content">
                <h3 class="quick-action-title">Danh mục</h3>
                <p class="quick-action-desc">Quản lý danh mục sản phẩm</p>
            </div>
            <div class="quick-action-arrow">
                <i class="fas fa-arrow-right"></i>
            </div>
        </a>

        <a asp-action="Brands" class="quick-action-card">
            <div class="quick-action-icon">
                <i class="fas fa-award"></i>
            </div>
            <div class="quick-action-content">
                <h3 class="quick-action-title">Thương hiệu</h3>
                <p class="quick-action-desc">Quản lý thương hiệu</p>
            </div>
            <div class="quick-action-arrow">
                <i class="fas fa-arrow-right"></i>
            </div>
        </a>

        <div class="quick-action-card disabled">
            <div class="quick-action-icon">
                <i class="fas fa-palette"></i>
            </div>
            <div class="quick-action-content">
                <h3 class="quick-action-title">Phiên bản</h3>
                <p class="quick-action-desc">Màu sắc & kích thước</p>
            </div>
        </div>

        <div class="quick-action-card disabled">
            <div class="quick-action-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="quick-action-content">
                <h3 class="quick-action-title">Thống kê</h3>
                <p class="quick-action-desc">Báo cáo sản phẩm</p>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-minimal alert-minimal-success">
            <i class="fas fa-check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
            <button onclick="this.parentElement.remove()" class="alert-close">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-minimal alert-minimal-danger">
            <i class="fas fa-exclamation-circle"></i>
            <span>@TempData["ErrorMessage"]</span>
            <button onclick="this.parentElement.remove()" class="alert-close">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }

    <!-- Filter Section -->
    <div class="filter-section">
        <form method="get" id="filterForm">
            <div class="search-box">
                <i class="fas fa-search search-icon"></i>
                <input type="text" name="searchTerm" value="@(Model?.SearchTerm ?? "")" 
                       class="search-input" placeholder="Tìm kiếm theo tên sản phẩm, mô tả...">
            </div>

            <div class="filter-grid">
                <div class="filter-group">
                    <label class="filter-label">
                        <i class="fas fa-tags me-1"></i>Danh mục
                    </label>
                    <select name="categoryId" class="filter-select" onchange="this.form.submit()">
                        <option value="">Tất cả danh mục</option>
                        @if (ViewBag.Categories is SelectList categories)
                        {
                            @foreach (var item in categories)
                            {
                                <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="filter-group">
                    <label class="filter-label">
                        <i class="fas fa-award me-1"></i>Thương hiệu
                    </label>
                    <select name="brandId" class="filter-select" onchange="this.form.submit()">
                        <option value="">Tất cả thương hiệu</option>
                        @if (ViewBag.Brands is SelectList brands)
                        {
                            @foreach (var item in brands)
                            {
                                <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="filter-group">
                    <label class="filter-label">Hiển thị</label>
                    <select name="pageSize" class="filter-select" onchange="this.form.submit()">
                        <option value="10" selected="@((Model?.PageSize ?? 10) == 10)">10</option>
                        <option value="25" selected="@((Model?.PageSize ?? 10) == 25)">25</option>
                        <option value="50" selected="@((Model?.PageSize ?? 10) == 50)">50</option>
                    </select>
                </div>
            </div>

            <div class="filter-actions">
                <button type="submit" class="btn-filter-primary">
                    <i class="fas fa-search me-2"></i>
                    Tìm kiếm
                </button>
                <a asp-action="Index" class="btn-filter-secondary">
                    <i class="fas fa-redo me-2"></i>
                    Xóa bộ lọc
                </a>
            </div>
        </form>
    </div>

    <!-- Products Table -->
    <div class="table-container">
        <div class="table-header">
            <h3 class="table-title">
                <i class="fas fa-shopping-bag me-2"></i>
                Danh sách sản phẩm <span class="table-count">(@(Model?.TotalCount ?? 0))</span>
            </h3>
            <div class="table-tools">
                <button onclick="exportToExcel()" class="btn-tool">
                    <i class="fas fa-download me-1"></i>
                    Xuất Excel
                </button>
            </div>
        </div>

        @if (Model?.Products != null && Model.Products.Any())
        {
            <table class="minimalist-table">
                <thead>
                    <tr>
                        <th width="50">
                            <input type="checkbox" class="checkbox-minimal" id="selectAll" onchange="toggleSelectAll()">
                        </th>
                        <th>Sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Thương hiệu</th>
                        <th>Giá</th>
                        <th class="text-center">Phiên bản</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center" width="120">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="checkbox-minimal product-checkbox" value="@product.Id">
                            </td>
                            <td>
                                <div class="product-info">
                                    <div class="product-icon">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <div class="product-details">
                                        <div class="product-name">@product.Name</div>
                                        <div class="product-desc">
                                            @(product.Description.Length > 60 ? product.Description.Substring(0, 60) + "..." : product.Description)
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge-minimal badge-primary">
                                    <i class="fas fa-tag me-1"></i>
                                    @product.CategoryName
                                </span>
                            </td>
                            <td>
                                <span class="badge-minimal badge-secondary">
                                    <i class="fas fa-award me-1"></i>
                                    @product.BrandName
                                </span>
                            </td>
                            <td>
                                <div class="price-display">@product.Price.ToString("N0") ₫</div>
                            </td>
                            <td class="text-center">
                                <span class="count-badge">
                                    @product.VariantCount
                                </span>
                            </td>
                            <td class="text-center">
                                @if (product.IsActive)
                                {
                                    <span class="status-badge active">
                                        <i class="fas fa-check-circle"></i>
                                        Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge inactive">
                                        <i class="fas fa-pause-circle"></i>
                                        Tạm dừng
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn-action" title="Chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Variants" asp-route-id="@product.Id" class="btn-action" title="Phiên bản">
                                        <i class="fas fa-palette"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn-action" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn-action danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if ((Model?.TotalPages ?? 0) > 1)
            {
                <div class="pagination-container">
                    <nav class="pagination-minimal">
                        @{
                            int currentPage = Model?.CurrentPage ?? 1;
                            int totalPages = Model?.TotalPages ?? 1;
                            int startPage = Math.Max(1, currentPage - 2);
                            int endPage = Math.Min(totalPages, currentPage + 2);
                        }

                        <a class="page-btn @((currentPage <= 1) ? "disabled" : "")"
                           asp-action="Index"
                           asp-route-page="@(currentPage - 1)"
                           asp-route-searchTerm="@(Model?.SearchTerm)"
                           asp-route-categoryId="@(Model?.CategoryId)"
                           asp-route-brandId="@(Model?.BrandId)"
                           asp-route-pageSize="@(Model?.PageSize)">
                            <i class="fas fa-chevron-left"></i>
                        </a>

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <a class="page-btn @(i == currentPage ? "active" : "")"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchTerm="@(Model?.SearchTerm)"
                               asp-route-categoryId="@(Model?.CategoryId)"
                               asp-route-brandId="@(Model?.BrandId)"
                               asp-route-pageSize="@(Model?.PageSize)">
                                @i
                            </a>
                        }

                        <a class="page-btn @((currentPage >= totalPages) ? "disabled" : "")"
                           asp-action="Index"
                           asp-route-page="@(currentPage + 1)"
                           asp-route-searchTerm="@(Model?.SearchTerm)"
                           asp-route-categoryId="@(Model?.CategoryId)"
                           asp-route-brandId="@(Model?.BrandId)"
                           asp-route-pageSize="@(Model?.PageSize)">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </nav>

                    <div class="pagination-info">
                        Hiển thị @(((Model?.CurrentPage ?? 1) - 1) * (Model?.PageSize ?? 10) + 1) -
                        @(Math.Min((Model?.CurrentPage ?? 1) * (Model?.PageSize ?? 10), (Model?.TotalCount ?? 0)))
                        của @(Model?.TotalCount ?? 0) sản phẩm
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-shopping-bag fa-3x"></i>
                <h3>
                    @if (!string.IsNullOrEmpty(Model?.SearchTerm) || (Model?.CategoryId).HasValue || (Model?.BrandId).HasValue)
                    {
                        <span>Không tìm thấy sản phẩm</span>
                    }
                    else
                    {
                        <span>Chưa có sản phẩm nào</span>
                    }
                </h3>
                <p>
                    @if (!string.IsNullOrEmpty(Model?.SearchTerm) || (Model?.CategoryId).HasValue || (Model?.BrandId).HasValue)
                    {
                        <span>Thử thay đổi bộ lọc hoặc từ khóa tìm kiếm</span>
                    }
                    else
                    {
                        <span>Hãy thêm sản phẩm đầu tiên để bắt đầu kinh doanh</span>
                    }
                </p>
                <div class="empty-actions">
                    <a asp-action="Create" class="btn-minimal-primary">
                        <i class="fas fa-plus me-2"></i>
                        Thêm sản phẩm đầu tiên
                    </a>
                    @if (!string.IsNullOrEmpty(Model?.SearchTerm) || (Model?.CategoryId).HasValue || (Model?.BrandId).HasValue)
                    {
                        <a asp-action="Index" class="btn-minimal-outline">
                            <i class="fas fa-redo me-2"></i>
                            Xóa bộ lọc
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        /* ===== COLOR PALETTE ===== */
        :root {
            --white: #ffffff;
            --gray-50: #fafafa;
            --gray-100: #f5f5f5;
            --gray-200: #eeeeee;
            --gray-300: #e0e0e0;
            --gray-400: #bdbdbd;
            --gray-500: #9e9e9e;
            --gray-600: #757575;
            --gray-700: #616161;
            --gray-800: #424242;
            --gray-900: #212121;
            
            --primary: #2196f3;
            --success: #27ae60;
            --warning: #f39c12;
            --danger: #e74c3c;
            
            --border-radius: 8px;
            --transition: all 0.2s ease;
        }

        /* ===== CONTAINER ===== */
        .minimalist-product-management {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        /* ===== PAGE HEADER ===== */
        .page-header-minimal {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .page-title-minimal {
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 0.5rem 0;
            letter-spacing: -0.02em;
        }

        .page-subtitle-minimal {
            font-size: 0.95rem;
            color: var(--gray-600);
            margin: 0;
        }

        .header-actions {
            display: flex;
            gap: 0.75rem;
        }

        /* ===== BUTTONS ===== */
        .btn-minimal-primary {
            display: inline-flex;
            align-items: center;
            padding: 0.65rem 1.25rem;
            background: var(--gray-900);
            border: 1px solid var(--gray-900);
            border-radius: var(--border-radius);
            color: var(--white);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: var(--transition);
            cursor: pointer;
        }

        .btn-minimal-primary:hover {
            background: var(--gray-800);
            border-color: var(--gray-800);
            color: var(--white);
        }

        .btn-minimal-outline {
            display: inline-flex;
            align-items: center;
            padding: 0.65rem 1.25rem;
            background: var(--white);
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            color: var(--gray-700);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: var(--transition);
            cursor: pointer;
        }

        .btn-minimal-outline:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
            color: var(--gray-900);
        }

        /* ===== QUICK ACTIONS ===== */
        .quick-actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .quick-action-card {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.25rem;
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: var(--border-radius);
            text-decoration: none;
            transition: var(--transition);
            position: relative;
        }

        .quick-action-card:not(.disabled):hover {
            border-color: var(--gray-400);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            transform: translateY(-2px);
        }

        .quick-action-card.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .quick-action-icon {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: var(--gray-100);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--gray-700);
            flex-shrink: 0;
        }

        .quick-action-card:not(.disabled):hover .quick-action-icon {
            background: var(--gray-900);
            color: var(--white);
        }

        .quick-action-content {
            flex: 1;
        }

        .quick-action-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 0.25rem 0;
        }

        .quick-action-desc {
            font-size: 0.85rem;
            color: var(--gray-600);
            margin: 0;
        }

        .quick-action-arrow {
            color: var(--gray-400);
            font-size: 0.875rem;
        }

        .quick-action-card:not(.disabled):hover .quick-action-arrow {
            color: var(--gray-900);
        }

        /* ===== ALERTS ===== */
        .alert-minimal {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 1.25rem;
            border-radius: var(--border-radius);
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
        }

        .alert-minimal i {
            font-size: 1.1rem;
        }

        .alert-minimal-success {
            background: rgba(39, 174, 96, 0.1);
            color: var(--success);
            border: 1px solid rgba(39, 174, 96, 0.2);
        }

        .alert-minimal-danger {
            background: rgba(231, 76, 60, 0.1);
            color: var(--danger);
            border: 1px solid rgba(231, 76, 60, 0.2);
        }

        .alert-close {
            margin-left: auto;
            background: none;
            border: none;
            color: inherit;
            opacity: 0.7;
            cursor: pointer;
            padding: 0.25rem;
        }

        .alert-close:hover {
            opacity: 1;
        }

        /* ===== FILTER SECTION ===== */
        .filter-section {
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .search-box {
            position: relative;
            margin-bottom: 1.25rem;
        }

        .search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-500);
            font-size: 0.9rem;
        }

        .search-input {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.75rem;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            font-size: 0.95rem;
            transition: var(--transition);
        }

        .search-input:focus {
            outline: none;
            border-color: var(--gray-900);
            box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .filter-label {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--gray-700);
        }

        .filter-select {
            padding: 0.65rem 0.875rem;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            font-size: 0.9rem;
            color: var(--gray-700);
            background: var(--white);
            transition: var(--transition);
        }

        .filter-select:focus {
            outline: none;
            border-color: var(--gray-900);
            box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
        }

        .filter-actions {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
        }

        .btn-filter-primary {
            padding: 0.65rem 1.25rem;
            background: var(--gray-900);
            border: 1px solid var(--gray-900);
            border-radius: var(--border-radius);
            color: var(--white);
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
        }

        .btn-filter-primary:hover {
            background: var(--gray-800);
        }

        .btn-filter-secondary {
            padding: 0.65rem 1.25rem;
            background: var(--white);
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            color: var(--gray-700);
            font-size: 0.9rem;
            font-weight: 500;
            text-decoration: none;
            transition: var(--transition);
        }

        .btn-filter-secondary:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
        }

        /* ===== TABLE ===== */
        .table-container {
            background: var(--white);
            border: 1px solid var(--gray-200);
            border-radius: var(--border-radius);
            overflow: hidden;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .table-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0;
            display: flex;
            align-items: center;
        }

        .table-count {
            color: var(--gray-600);
            font-weight: 400;
        }

        .table-tools {
            display: flex;
            gap: 0.5rem;
        }

        .btn-tool {
            padding: 0.5rem 1rem;
            background: var(--white);
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            color: var(--gray-700);
            font-size: 0.875rem;
            cursor: pointer;
            transition: var(--transition);
        }

        .btn-tool:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
        }

        .minimalist-table {
            width: 100%;
            border-collapse: collapse;
        }

        .minimalist-table thead {
            background: var(--gray-50);
        }

        .minimalist-table th {
            padding: 1rem 1.25rem;
            text-align: left;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-700);
            border-bottom: 1px solid var(--gray-200);
        }

        .minimalist-table td {
            padding: 1rem 1.25rem;
            border-bottom: 1px solid var(--gray-100);
            font-size: 0.9rem;
            color: var(--gray-800);
        }

        .minimalist-table tbody tr:hover {
            background: var(--gray-50);
        }

        .minimalist-table tbody tr:last-child td {
            border-bottom: none;
        }

        /* ===== PRODUCT INFO ===== */
        .product-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .product-icon {
            width: 40px;
            height: 40px;
            border-radius: var(--border-radius);
            background: var(--gray-100);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--gray-600);
            flex-shrink: 0;
        }

        .product-details {
            flex: 1;
        }

        .product-name {
            font-weight: 500;
            color: var(--gray-900);
            margin-bottom: 0.25rem;
        }

        .product-desc {
            font-size: 0.8rem;
            color: var(--gray-600);
            line-height: 1.4;
        }

        /* ===== BADGES ===== */
        .badge-minimal {
            display: inline-flex;
            align-items: center;
            padding: 0.35rem 0.65rem;
            border-radius: var(--border-radius);
            font-size: 0.8rem;
            font-weight: 500;
        }

        .badge-primary {
            background: rgba(33, 150, 243, 0.1);
            color: var(--primary);
        }

        .badge-secondary {
            background: var(--gray-100);
            color: var(--gray-700);
        }

        .price-display {
            font-weight: 600;
            color: var(--success);
            font-size: 0.95rem;
        }

        .count-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 32px;
            height: 32px;
            padding: 0 0.5rem;
            border-radius: var(--border-radius);
            background: var(--gray-100);
            color: var(--gray-700);
            font-weight: 600;
            font-size: 0.875rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.375rem 0.75rem;
            border-radius: var(--border-radius);
            font-size: 0.8rem;
            font-weight: 500;
        }

        .status-badge.active {
            background: rgba(39, 174, 96, 0.1);
            color: var(--success);
        }

        .status-badge.inactive {
            background: var(--gray-100);
            color: var(--gray-600);
        }

        .status-badge i {
            font-size: 0.75rem;
        }

        /* ===== ACTION BUTTONS ===== */
        .action-buttons {
            display: flex;
            gap: 0.375rem;
            justify-content: center;
        }

        .btn-action {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            background: var(--white);
            color: var(--gray-700);
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
        }

        .btn-action:hover {
            background: var(--gray-900);
            border-color: var(--gray-900);
            color: var(--white);
        }

        .btn-action.danger:hover {
            background: var(--danger);
            border-color: var(--danger);
            color: var(--white);
        }

        .btn-action i {
            font-size: 0.875rem;
        }

        /* ===== CHECKBOX ===== */
        .checkbox-minimal {
            width: 16px;
            height: 16px;
            border: 1px solid var(--gray-400);
            border-radius: 4px;
            cursor: pointer;
        }

        /* ===== PAGINATION ===== */
        .pagination-container {
            padding: 1.25rem 1.5rem;
            border-top: 1px solid var(--gray-200);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .pagination-minimal {
            display: flex;
            gap: 0.375rem;
        }

        .page-btn {
            min-width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 0.75rem;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            background: var(--white);
            color: var(--gray-700);
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: var(--transition);
        }

        .page-btn:hover:not(.disabled):not(.active) {
            background: var(--gray-50);
            border-color: var(--gray-400);
        }

        .page-btn.active {
            background: var(--gray-900);
            border-color: var(--gray-900);
            color: var(--white);
        }

        .page-btn.disabled {
            opacity: 0.4;
            cursor: not-allowed;
        }

        .pagination-info {
            font-size: 0.875rem;
            color: var(--gray-600);
        }

        /* ===== EMPTY STATE ===== */
        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
        }

        .empty-state i {
            color: var(--gray-300);
            margin-bottom: 1.5rem;
        }

        .empty-state h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--gray-600);
            margin: 0 0 1.5rem 0;
        }

        .empty-actions {
            display: flex;
            gap: 0.75rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        /* ===== RESPONSIVE ===== */
        @@media (max-width: 768px) {
            .minimalist-product-management {
                padding: 1rem 0.5rem;
            }

            .page-header-minimal .d-flex {
                flex-direction: column;
                align-items: flex-start !important;
            }

            .quick-actions-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .table-container {
                overflow-x: auto;
            }

            .minimalist-table {
                min-width: 900px;
            }

            .filter-grid {
                grid-template-columns: 1fr;
            }

            .pagination-container {
                flex-direction: column;
                text-align: center;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const checkboxes = document.querySelectorAll('.product-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAll.checked;
            });
        }

        function exportToExcel() {
            alert('Tính năng xuất Excel sẽ được phát triển trong tương lai');
        }
    </script>
}