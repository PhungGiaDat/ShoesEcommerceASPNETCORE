@model ShoesEcommerce.Models.Products.ProductVariant
@{
    ViewData["Title"] = "Xóa Phiên b?n";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb-nav">
        <a href="/Admin" class="breadcrumb-link">Dashboard</a>
        <span class="breadcrumb-sep">/</span>
        <a href="/Admin/Product" class="breadcrumb-link">S?n ph?m</a>
        <span class="breadcrumb-sep">/</span>
        <a href="/Admin/Product/Details/@Model.ProductId" class="breadcrumb-link">Chi ti?t</a>
        <span class="breadcrumb-sep">/</span>
        <span class="breadcrumb-current">Xóa phiên b?n</span>
    </nav>

    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <h1>Xóa phiên b?n</h1>
            @if (ViewBag.Product != null)
            {
                <p>@ViewBag.Product.Name</p>
            }
        </div>
    </div>

    <div class="delete-container">
        <div class="delete-card">
            <div class="delete-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                    <line x1="12" y1="9" x2="12" y2="13"></line>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
            </div>
            
            <h2>B?n có ch?c ch?n mu?n xóa phiên b?n này?</h2>
            
            <div class="variant-info">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="variant-image">
                        <img src="@Model.ImageUrl" alt="@Model.Color - @Model.Size" onerror="this.style.display='none'" />
                    </div>
                }
                <div class="variant-details">
                    <div class="detail-row">
                        <span class="label">Màu s?c:</span>
                        <span class="value">@Model.Color</span>
                    </div>
                    <div class="detail-row">
                        <span class="label">Kích th??c:</span>
                        <span class="value">@Model.Size</span>
                    </div>
                    <div class="detail-row">
                        <span class="label">Giá:</span>
                        <span class="value price">@Model.Price.ToString("N0")?</span>
                    </div>
                </div>
            </div>

            <div class="warning-message">
                <p><strong>L?u ý:</strong> Hành ??ng này không th? hoàn tác. T?t c? d? li?u liên quan ??n phiên b?n này s? b? xóa v?nh vi?n.</p>
            </div>

            <form method="post" asp-action="DeleteVariant" asp-route-id="@Model.Id">
                <div class="delete-actions">
                    <a href="/Admin/Product/Details/@Model.ProductId" class="btn-secondary">H?y</a>
                    <button type="submit" class="btn-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            <line x1="10" y1="11" x2="10" y2="17"></line>
                            <line x1="14" y1="11" x2="14" y2="17"></line>
                        </svg>
                        Xóa phiên b?n
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
<style>
    .page-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .breadcrumb-nav {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        font-size: 0.875rem;
        flex-wrap: wrap;
    }

    .breadcrumb-link { color: #6b7280; text-decoration: none; }
    .breadcrumb-link:hover { color: #111827; }
    .breadcrumb-sep { color: #d1d5db; }
    .breadcrumb-current { color: #111827; font-weight: 500; }

    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #e5e7eb;
    }

    .header-content h1 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #111827;
        margin: 0 0 0.25rem;
    }

    .header-content p {
        font-size: 0.875rem;
        color: #6b7280;
        margin: 0;
    }

    .delete-container {
        display: flex;
        justify-content: center;
    }

    .delete-card {
        background: #fff;
        border: 1px solid #fecaca;
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        width: 100%;
    }

    .delete-icon {
        width: 80px;
        height: 80px;
        background: #fef2f2;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: #dc2626;
    }

    .delete-card h2 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #111827;
        margin: 0 0 1.5rem;
    }

    .variant-info {
        background: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1.25rem;
        text-align: left;
    }

    .variant-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        overflow: hidden;
        background: #fff;
        border: 1px solid #e5e7eb;
        flex-shrink: 0;
    }

    .variant-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .variant-details {
        flex: 1;
    }

    .detail-row {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 0.375rem;
    }

    .detail-row:last-child {
        margin-bottom: 0;
    }

    .detail-row .label {
        font-size: 0.875rem;
        color: #6b7280;
        min-width: 80px;
    }

    .detail-row .value {
        font-size: 0.875rem;
        font-weight: 500;
        color: #111827;
    }

    .detail-row .value.price {
        color: #059669;
    }

    .warning-message {
        background: #fef3c7;
        border: 1px solid #fcd34d;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        text-align: left;
    }

    .warning-message p {
        font-size: 0.875rem;
        color: #92400e;
        margin: 0;
    }

    .delete-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .btn-secondary, .btn-danger {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border: none;
    }

    .btn-secondary {
        background: #fff;
        border: 1px solid #e5e7eb;
        color: #374151;
    }

    .btn-secondary:hover {
        border-color: #d1d5db;
        background: #f9fafb;
    }

    .btn-danger {
        background: #dc2626;
        color: #fff;
    }

    .btn-danger:hover {
        background: #b91c1c;
    }

    @@media (max-width: 480px) {
        .variant-info {
            flex-direction: column;
            text-align: center;
        }

        .detail-row {
            justify-content: center;
        }

        .delete-actions {
            flex-direction: column;
        }

        .btn-secondary, .btn-danger {
            width: 100%;
            justify-content: center;
        }
    }
</style>
}
