@{
    ViewData["Title"] = "Tra cứu đơn hàng";
    ViewData["MetaDescription"] = "Tra cứu tình trạng đơn hàng của bạn tại SPORTS - Chỉ cần nhập mã đơn hàng và số điện thoại";
}

<style>
    .track-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
        font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif;
    }

    .track-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .track-icon {
        width: 80px;
        height: 80px;
        background: #f3f4f6;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2rem;
        color: #6b7280;
    }

    .track-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #000;
        margin-bottom: 0.5rem;
        letter-spacing: -0.5px;
    }

    .track-subtitle {
        font-size: 0.938rem;
        color: #6b7280;
    }

    .track-form {
        background: #fafafa;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group:last-child {
        margin-bottom: 0;
    }

    .form-label {
        display: block;
        font-size: 0.813rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.5rem;
    }

    .form-input {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 1.5px solid #e5e7eb;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.2s;
        background: #fff;
    }

    .form-input:focus {
        outline: none;
        border-color: #000;
        box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
    }

    .form-input::placeholder {
        color: #9ca3af;
    }

    .btn-track {
        width: 100%;
        padding: 1rem;
        background: #000;
        color: #fff;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-track:hover {
        background: #1f2937;
        transform: translateY(-1px);
    }

    .btn-track:disabled {
        background: #9ca3af;
        cursor: not-allowed;
        transform: none;
    }

    .btn-track .spinner {
        display: none;
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255,255,255,0.3);
        border-top-color: #fff;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    .btn-track.loading .spinner {
        display: block;
    }

    .btn-track.loading .btn-text {
        display: none;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Result Section */
    .result-section {
        display: none;
    }

    .result-section.show {
        display: block;
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .result-card {
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        overflow: hidden;
    }

    .result-header {
        background: #fafafa;
        padding: 1.5rem;
        border-bottom: 1px solid #e5e7eb;
    }

    .result-order-number {
        font-size: 1.25rem;
        font-weight: 700;
        color: #000;
        margin-bottom: 0.5rem;
    }

    .result-date {
        font-size: 0.813rem;
        color: #6b7280;
    }

    .status-badges {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
        flex-wrap: wrap;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 1rem;
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 600;
        border: 1px solid;
    }

    .badge-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
    }

    .status-pending {
        background: #fef3c7;
        color: #92400e;
        border-color: #fbbf24;
    }
    .status-pending .badge-dot { background: #f59e0b; }

    .status-confirmed {
        background: #dbeafe;
        color: #1e40af;
        border-color: #60a5fa;
    }
    .status-confirmed .badge-dot { background: #3b82f6; }

    .status-shipping {
        background: #ccfbf1;
        color: #115e59;
        border-color: #5eead4;
    }
    .status-shipping .badge-dot { background: #14b8a6; }

    .status-completed, .status-delivered {
        background: #dcfce7;
        color: #166534;
        border-color: #86efac;
    }
    .status-completed .badge-dot, .status-delivered .badge-dot { background: #22c55e; }

    .status-cancelled {
        background: #fee2e2;
        color: #991b1b;
        border-color: #fca5a5;
    }
    .status-cancelled .badge-dot { background: #ef4444; }

    .payment-paid {
        background: #dcfce7;
        color: #166534;
        border-color: #86efac;
    }
    .payment-paid .badge-dot { background: #22c55e; }

    .payment-pending {
        background: #fef3c7;
        color: #92400e;
        border-color: #fbbf24;
    }
    .payment-pending .badge-dot { background: #f59e0b; }

    .result-body {
        padding: 1.5rem;
    }

    .result-section-title {
        font-size: 0.813rem;
        font-weight: 600;
        color: #6b7280;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1rem;
    }

    .shipping-info {
        background: #f9fafb;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .shipping-name {
        font-weight: 600;
        color: #000;
        margin-bottom: 0.25rem;
    }

    .shipping-detail {
        font-size: 0.875rem;
        color: #6b7280;
        line-height: 1.5;
    }

    .product-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .product-item {
        display: flex;
        gap: 1rem;
        padding: 1rem;
        background: #f9fafb;
        border-radius: 10px;
    }

    .product-image {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        overflow: hidden;
        flex-shrink: 0;
        background: #e5e7eb;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-placeholder {
        color: #9ca3af;
        font-size: 1.5rem;
    }

    .product-info {
        flex: 1;
        min-width: 0;
    }

    .product-name {
        font-size: 0.875rem;
        font-weight: 600;
        color: #000;
        margin-bottom: 0.25rem;
    }

    .product-variant {
        font-size: 0.75rem;
        color: #6b7280;
    }

    .product-price {
        font-size: 0.875rem;
        font-weight: 600;
        color: #000;
        margin-top: 0.5rem;
    }

    .result-total {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-top: 1px solid #e5e7eb;
        background: #fafafa;
    }

    .total-label {
        font-size: 0.938rem;
        font-weight: 600;
        color: #374151;
    }

    .total-value {
        font-size: 1.25rem;
        font-weight: 700;
        color: #000;
    }

    /* Error Message */
    .error-message {
        display: none;
        background: #fef2f2;
        border: 1px solid #fecaca;
        border-radius: 10px;
        padding: 1rem;
        color: #991b1b;
        font-size: 0.875rem;
        margin-bottom: 1rem;
    }

    .error-message.show {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    /* Help Section */
    .help-section {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e5e7eb;
    }

    .help-text {
        font-size: 0.875rem;
        color: #6b7280;
        margin-bottom: 0.5rem;
    }

    .help-link {
        color: #000;
        font-weight: 600;
        text-decoration: underline;
    }

    .btn-new-search {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: #f3f4f6;
        color: #374151;
        border: none;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        margin-top: 1rem;
        transition: all 0.2s;
    }

    .btn-new-search:hover {
        background: #e5e7eb;
    }
</style>

<div class="track-container">
    <!-- Header -->
    <div class="track-header">
        <div class="track-icon">
            <i class="fas fa-search"></i>
        </div>
        <h1 class="track-title">Tra cứu đơn hàng</h1>
        <p class="track-subtitle">Nhập mã đơn hàng và số điện thoại để kiểm tra tình trạng</p>
    </div>

    <!-- Search Form -->
    <div class="track-form" id="trackForm">
        <form id="orderTrackForm" onsubmit="trackOrder(event)">
            @Html.AntiForgeryToken()
            
            <div class="error-message" id="errorMessage">
                <i class="fas fa-exclamation-circle"></i>
                <span id="errorText"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Mã đơn hàng</label>
                <input type="text" 
                       id="orderNumber" 
                       class="form-input" 
                       placeholder="Ví dụ: ORD000001 hoặc 1"
                       required>
            </div>

            <div class="form-group">
                <label class="form-label">Số điện thoại</label>
                <input type="tel" 
                       id="phone" 
                       class="form-input" 
                       placeholder="Số điện thoại đặt hàng"
                       required>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-track" id="btnTrack">
                    <span class="spinner"></span>
                    <span class="btn-text">
                        <i class="fas fa-search"></i>
                        Tra cứu đơn hàng
                    </span>
                </button>
            </div>
        </form>
    </div>

    <!-- Result Section -->
    <div class="result-section" id="resultSection">
        <div class="result-card">
            <div class="result-header">
                <div class="result-order-number" id="resultOrderNumber"></div>
                <div class="result-date" id="resultDate"></div>
                <div class="status-badges" id="statusBadges"></div>
            </div>

            <div class="result-body">
                <!-- Shipping Info -->
                <div class="result-section-title">Địa chỉ giao hàng</div>
                <div class="shipping-info" id="shippingInfo"></div>

                <!-- Products -->
                <div class="result-section-title">Sản phẩm</div>
                <div class="product-list" id="productList"></div>
            </div>

            <div class="result-total">
                <span class="total-label">Tổng cộng</span>
                <span class="total-value" id="totalValue"></span>
            </div>
        </div>

        <div style="text-align: center; margin-top: 1.5rem;">
            <button type="button" class="btn-new-search" onclick="newSearch()">
                <i class="fas fa-arrow-left"></i>
                Tra cứu đơn hàng khác
            </button>
        </div>
    </div>

    <!-- Help Section -->
    <div class="help-section">
        <p class="help-text">Bạn cần hỗ trợ?</p>
        <a href="tel:0939345555" class="help-link">
            <i class="fas fa-phone-alt"></i>
            Gọi hotline: 0939 345 555
        </a>
    </div>
</div>

<script>
    async function trackOrder(e) {
        e.preventDefault();
        
        const orderNumber = document.getElementById('orderNumber').value.trim();
        const phone = document.getElementById('phone').value.trim();
        const btn = document.getElementById('btnTrack');
        const errorEl = document.getElementById('errorMessage');
        
        if (!orderNumber || !phone) {
            showError('Vui lòng nhập đầy đủ mã đơn hàng và số điện thoại');
            return;
        }

        // Show loading
        btn.classList.add('loading');
        btn.disabled = true;
        errorEl.classList.remove('show');

        try {
            const formData = new FormData();
            formData.append('orderNumber', orderNumber);
            formData.append('phone', phone);
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            if (token) {
                formData.append('__RequestVerificationToken', token);
            }

            const response = await fetch('/Order/TrackOrder', {
                method: 'POST',
                body: formData
            });

            const data = await response.json();

            if (data.success) {
                displayResult(data.order);
            } else {
                showError(data.message || 'Không tìm thấy đơn hàng');
            }
        } catch (error) {
            console.error('Track order error:', error);
            showError('Có lỗi xảy ra. Vui lòng thử lại.');
        } finally {
            btn.classList.remove('loading');
            btn.disabled = false;
        }
    }

    function showError(message) {
        const errorEl = document.getElementById('errorMessage');
        document.getElementById('errorText').textContent = message;
        errorEl.classList.add('show');
    }

    function displayResult(order) {
        // Hide form, show result
        document.getElementById('trackForm').style.display = 'none';
        document.getElementById('resultSection').classList.add('show');

        // Order header
        document.getElementById('resultOrderNumber').textContent = '#' + order.orderNumber;
        document.getElementById('resultDate').textContent = 'Đặt hàng lúc: ' + order.createdAt;

        // Status badges
        const statusBadges = document.getElementById('statusBadges');
        const orderStatusClass = getStatusClass(order.status);
        const paymentStatusClass = order.paymentStatus === 'Paid' ? 'payment-paid' : 'payment-pending';
        
        statusBadges.innerHTML = `
            <span class="status-badge ${orderStatusClass}">
                <span class="badge-dot"></span>
                ${order.statusText}
            </span>
            <span class="status-badge ${paymentStatusClass}">
                <span class="badge-dot"></span>
                ${order.paymentStatusText}
            </span>
        `;

        // Shipping info
        const addr = order.shippingAddress;
        document.getElementById('shippingInfo').innerHTML = `
            <div class="shipping-name">${addr.fullName}</div>
            <div class="shipping-detail">
                <i class="fas fa-phone-alt"></i> ${addr.phone}<br>
                <i class="fas fa-map-marker-alt"></i> ${addr.address}, ${addr.district}, ${addr.city}
            </div>
        `;

        // Products
        const productList = document.getElementById('productList');
        productList.innerHTML = order.items.map(item => `
            <div class="product-item">
                <div class="product-image">
                    ${item.imageUrl 
                        ? `<img src="${item.imageUrl}" alt="${item.name}" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                           <span class="product-placeholder" style="display:none;"><i class="fas fa-image"></i></span>`
                        : `<span class="product-placeholder"><i class="fas fa-image"></i></span>`
                    }
                </div>
                <div class="product-info">
                    <div class="product-name">${item.name}</div>
                    <div class="product-variant">${item.color} • Size ${item.size}</div>
                    <div class="product-price">SL: ${item.quantity} × ${item.price}₫</div>
                </div>
            </div>
        `).join('');

        // Total
        document.getElementById('totalValue').textContent = order.totalAmount + '₫';
    }

    function getStatusClass(status) {
        const statusLower = status?.toLowerCase() || '';
        const classMap = {
            'pending': 'status-pending',
            'confirmed': 'status-confirmed',
            'processing': 'status-confirmed',
            'shipping': 'status-shipping',
            'delivered': 'status-delivered',
            'completed': 'status-completed',
            'cancelled': 'status-cancelled'
        };
        return classMap[statusLower] || 'status-pending';
    }

    function newSearch() {
        document.getElementById('trackForm').style.display = 'block';
        document.getElementById('resultSection').classList.remove('show');
        document.getElementById('orderNumber').value = '';
        document.getElementById('phone').value = '';
        document.getElementById('errorMessage').classList.remove('show');
        document.getElementById('orderNumber').focus();
    }

    // Auto-focus
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('orderNumber').focus();
    });
</script>
