@model ShoesEcommerce.Models.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-success shadow">
                <div class="card-header bg-success text-white text-center">
                    <i class="fas fa-check-circle fa-3x mb-3"></i>
                    <h3 class="mb-0">Đặt hàng thành công!</h3>
                    <p class="mb-0">Cảm ơn bạn đã mua sắm tại ShoesEcommerce</p>
                </div>
                <div class="card-body text-center">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-shopping-bag me-2"></i>
                                        Thông tin đơn hàng
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <strong>Mã đơn hàng:</strong>
                                        <br>
                                        <span class="text-primary fs-5">@Model.OrderNumber</span>
                                    </div>
                                    <div class="mb-2">
                                        <strong>Ngày đặt:</strong>
                                        <br>
                                        <span class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                    <div class="mb-0">
                                        <strong>Tổng tiền:</strong>
                                        <br>
                                        <span class="text-success fs-5">@Model.TotalAmount.ToString("N0")đ</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-shipping-fast me-2"></i>
                                        Thông tin giao hàng
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <strong>Người nhận:</strong>
                                        <br>
                                        <span class="text-muted">@Model.ShippingAddress.FullName</span>
                                    </div>
                                    <div class="mb-2">
                                        <strong>Số điện thoại:</strong>
                                        <br>
                                        <span class="text-muted">@Model.ShippingAddress.PhoneNumber</span>
                                    </div>
                                    <div class="mb-0">
                                        <strong>Địa chỉ:</strong>
                                        <br>
                                        <span class="text-muted">
                                            @Model.ShippingAddress.Address, @Model.ShippingAddress.District, @Model.ShippingAddress.City
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Lưu ý:</strong> Chúng tôi sẽ liên hệ với bạn trong thời gian sớm nhất để xác nhận đơn hàng và thông báo thời gian giao hàng.
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-box me-2"></i>
                                Sản phẩm đã đặt
                            </h5>
                            
                            @foreach (var detail in Model.OrderDetails)
                            {
                                <div class="card mb-3 border-0 bg-light">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-2">
                                                <img src="@detail.ProductVariant.ImageUrl" 
                                                     alt="@detail.ProductVariant.Name" 
                                                     class="img-fluid rounded" 
                                                     style="max-width: 80px;">
                                            </div>
                                            <div class="col-md-6">
                                                <h6 class="mb-1">@detail.ProductVariant.Name</h6>
                                                <p class="mb-1 text-muted">
                                                    <small>
                                                        <i class="fas fa-palette me-1"></i>
                                                        Màu: @detail.ProductVariant.Color
                                                    </small>
                                                </p>
                                                <p class="mb-0 text-muted">
                                                    <small>
                                                        <i class="fas fa-ruler me-1"></i>
                                                        Kích thước: @detail.ProductVariant.Size
                                                    </small>
                                                </p>
                                            </div>
                                            <div class="col-md-2 text-center">
                                                <span class="badge bg-secondary">SL: @detail.Quantity</span>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <div class="text-primary fw-bold">
                                                    @detail.UnitPrice.ToString("N0")đ
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <a href="@Url.Action("Details", "Order", new { id = Model.Id })" 
                               class="btn btn-primary me-3">
                                <i class="fas fa-eye me-2"></i>
                                Xem chi tiết đơn hàng
                            </a>
                            <a href="@Url.Action("Index", "Product")" 
                               class="btn btn-success me-3">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Mua thêm sản phẩm
                            </a>
                            <a href="@Url.Action("Index", "Order")" 
                               class="btn btn-outline-secondary">
                                <i class="fas fa-list me-2"></i>
                                Xem tất cả đơn hàng
                            </a>
                        </div>
                    </div>

                    <div class="mt-4 p-3 bg-light rounded">
                        <h6 class="mb-2">
                            <i class="fas fa-question-circle me-2"></i>
                            Bạn cần hỗ trợ?
                        </h6>
                        <p class="mb-2">
                            Nếu có bất kỳ câu hỏi nào về đơn hàng, vui lòng liên hệ với chúng tôi:
                        </p>
                        <div class="row text-center">
                            <div class="col-md-4">
                                <i class="fas fa-phone text-primary me-2"></i>
                                <strong>Hotline:</strong><br>
                                <span class="text-muted">1900-xxxx</span>
                            </div>
                            <div class="col-md-4">
                                <i class="fas fa-envelope text-primary me-2"></i>
                                <strong>Email:</strong><br>
                                <span class="text-muted">support@shoesecommerce.com</span>
                            </div>
                            <div class="col-md-4">
                                <i class="fas fa-clock text-primary me-2"></i>
                                <strong>Giờ làm việc:</strong><br>
                                <span class="text-muted">8:00 - 22:00</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to top when page loads
        $(document).ready(function() {
            $('html, body').animate({
                scrollTop: 0
            }, 500);
        });
    </script>
}
