@model ShoesEcommerce.Models.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<style>
    /* 🎨 ULTRA-MINIMALIST ORDER DETAILS - WHITE/GRAY THEME */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: #ffffff;
    }

    .details-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
        font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif;
    }

    /* 🔙 Breadcrumb */
    .breadcrumb-nav {
        margin-bottom: 2rem;
    }

    .breadcrumb-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #6b7280;
        text-decoration: none;
        font-size: 0.875rem;
        transition: color 0.2s;
    }

    .breadcrumb-link:hover {
        color: #000;
    }

    .breadcrumb-separator {
        margin: 0 0.75rem;
        color: #d1d5db;
    }

    .breadcrumb-current {
        color: #000;
        font-weight: 500;
    }

    /* 📋 Order Header */
    .order-header {
        background: #fafafa;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .order-title-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .order-title-group {
        flex: 1;
        min-width: 250px;
    }

    .order-number {
        font-size: 1.5rem;
        font-weight: 700;
        color: #000;
        margin-bottom: 0.5rem;
        letter-spacing: -0.3px;
    }

    .order-date {
        font-size: 0.875rem;
        color: #6b7280;
    }

    .order-status-group {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    /* 🏷️ Status Badge - Minimal */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 1rem;
        border-radius: 100px;
        font-size: 0.813rem;
        font-weight: 600;
        border: 1px solid;
    }

    .badge-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
    }

    .status-pending {
        background: #fef3c7;
        color: #92400e;
        border-color: #fbbf24;
    }

    .status-pending .badge-dot {
        background: #f59e0b;
    }

    .status-delivered {
        background: #dcfce7;
        color: #166534;
        border-color: #86efac;
    }

    .status-delivered .badge-dot {
        background: #22c55e;
    }

    .payment-paid {
        background: #dcfce7;
        color: #166534;
        border-color: #86efac;
    }

    .payment-paid .badge-dot {
        background: #22c55e;
    }

    .payment-pending {
        background: #fef3c7;
        color: #92400e;
        border-color: #fbbf24;
    }

    .payment-pending .badge-dot {
        background: #f59e0b;
    }

    /* 📦 Main Content Grid */
    .details-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: 2rem;
    }

    /* 📦 Products Section */
    .products-section {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        padding: 2rem;
    }

    .section-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #000;
        margin-bottom: 1.5rem;
        letter-spacing: -0.2px;
    }

    .product-item {
        display: flex;
        gap: 1.25rem;
        padding: 1.25rem;
        background: #fafafa;
        border-radius: 12px;
        margin-bottom: 1rem;
        border: 1px solid #f3f4f6;
    }

    .product-item:last-child {
        margin-bottom: 0;
    }

    .product-image-wrapper {
        width: 80px;
        height: 80px;
        background: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        flex-shrink: 0;
        border: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        color: #9ca3af;
        font-size: 1.75rem;
    }

    .product-info {
        flex: 1;
        min-width: 0;
    }

    .product-name {
        font-size: 0.938rem;
        font-weight: 600;
        color: #000;
        margin-bottom: 0.5rem;
    }

    .product-variant {
        font-size: 0.813rem;
        color: #6b7280;
        margin-bottom: 0.375rem;
    }

    .product-price-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 0.75rem;
    }

    .product-quantity {
        font-size: 0.813rem;
        color: #000;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        background: white;
        border-radius: 100px;
        border: 1px solid #e5e7eb;
    }

    .product-price {
        font-size: 0.938rem;
        font-weight: 700;
        color: #000;
    }

    /* 📍 Info Cards */
    .info-cards {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .info-card {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        overflow: hidden;
    }

    .info-card-header {
        background: #fafafa;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e7eb;
    }

    .info-card-title {
        font-size: 0.938rem;
        font-weight: 600;
        color: #000;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-card-body {
        padding: 1.5rem;
    }

    .info-row {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .info-row:last-child {
        margin-bottom: 0;
    }

    .info-icon {
        color: #9ca3af;
        font-size: 0.875rem;
        min-width: 16px;
        margin-top: 0.125rem;
    }

    .info-content {
        flex: 1;
        font-size: 0.875rem;
        color: #374151;
        line-height: 1.5;
    }

    .info-label {
        font-weight: 600;
        color: #000;
        margin-bottom: 0.25rem;
    }

    /* 💰 Summary Card */
    .summary-card {
        background: #fafafa;
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        padding: 1.5rem;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-size: 0.875rem;
    }

    .summary-row:last-child {
        margin-bottom: 0;
        padding-top: 1rem;
        border-top: 1px solid #e5e7eb;
    }

    .summary-label {
        color: #6b7280;
    }

    .summary-value {
        font-weight: 600;
        color: #000;
    }

    .summary-total .summary-label {
        font-weight: 700;
        color: #000;
    }

    .summary-total .summary-value {
        font-size: 1.375rem;
        color: #000;
    }

    /* 🔘 Action Buttons */
    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        flex: 1;
        padding: 0.875rem 1.5rem;
        border-radius: 10px;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        border: none;
    }

    .btn-back {
        background: white;
        color: #6b7280;
        border: 1.5px solid #e5e7eb;
    }

    .btn-back:hover {
        border-color: #000;
        color: #000;
        transform: translateY(-1px);
    }

    .btn-primary {
        background: #000;
        color: white;
        border: 1.5px solid #000;
    }

    .btn-primary:hover {
        background: #1f2937;
        transform: translateY(-1px);
        color: white;
    }

    /* 📱 Responsive */
    @@media (max-width: 968px) {
        .details-grid {
            grid-template-columns: 1fr;
        }

        .order-title-row {
            flex-direction: column;
        }

        .product-item {
            flex-direction: column;
        }

        .product-price-row {
            flex-direction: row;
            justify-content: space-between;
        }

        .action-buttons {
            flex-direction: column;
        }
    }

    @@media (max-width: 640px) {
        .details-container {
            padding: 2rem 1rem;
        }

        .order-header {
            padding: 1.5rem;
        }

        .products-section,
        .info-card-body {
            padding: 1.25rem;
        }

        .order-number {
            font-size: 1.25rem;
        }
    }
</style>

<div class="details-container">
    <!-- Breadcrumb -->
    <div class="breadcrumb-nav">
        <a href="@Url.Action("Index", "Order")" class="breadcrumb-link">
            <i class="fas fa-arrow-left"></i>
            Đơn hàng của tôi
        </a>
        <span class="breadcrumb-separator">/</span>
        <span class="breadcrumb-current">Chi tiết đơn hàng</span>
    </div>

    <!-- Order Header -->
    <div class="order-header">
        <div class="order-title-row">
            <div class="order-title-group">
                <div class="order-number">#@Model.OrderNumber</div>
                <div class="order-date">Đặt hàng lúc: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
            </div>
            <div class="order-status-group">
                @{
                    var (orderClass, orderText) = Model.Status.ToLower() switch
                    {
                        "pending" => ("status-pending", "Chờ xử lý"),
                        "processing" => ("status-pending", "Đang xử lý"),
                        "delivered" => ("status-delivered", "Đã giao"),
                        _ => ("status-pending", Model.Status)
                    };

                    var (paymentClass, paymentText) = Model.PaymentStatus == "Paid" 
                        ? ("payment-paid", "Đã thanh toán") 
                        : ("payment-pending", "Chưa thanh toán");
                }

                <span class="status-badge @orderClass">
                    <span class="badge-dot"></span>
                    @orderText
                </span>
                <span class="status-badge @paymentClass">
                    <span class="badge-dot"></span>
                    @paymentText
                </span>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="details-grid">
        <!-- Left Column: Products -->
        <div class="products-section">
            <h2 class="section-title">Sản phẩm đã đặt</h2>
            
            @foreach (var detail in Model.OrderDetails)
            {
                <div class="product-item">
                    <div class="product-image-wrapper">
                        @if (!string.IsNullOrEmpty(detail.ProductVariant.ImageUrl))
                        {
                            <img src="@detail.ProductVariant.ImageUrl" 
                                 alt="@detail.ProductVariant.Name" 
                                 class="product-image"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="product-placeholder" style="display:none;">
                                <i class="fas fa-image"></i>
                            </div>
                        }
                        else
                        {
                            <div class="product-placeholder">
                                <i class="fas fa-image"></i>
                            </div>
                        }
                    </div>
                    <div class="product-info">
                        <div class="product-name">@detail.ProductVariant.Name</div>
                        <div class="product-variant">Màu: @detail.ProductVariant.Color</div>
                        <div class="product-variant">Kích thước: @detail.ProductVariant.Size</div>
                        <div class="product-price-row">
                            <div class="product-quantity">SL: @detail.Quantity</div>
                            <div class="product-price">@detail.UnitPrice.ToString("N0")₫</div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column: Info Cards -->
        <div class="info-cards">
            <!-- Shipping Info -->
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-card-title">
                        <i class="fas fa-truck"></i>
                        Thông tin giao hàng
                    </div>
                </div>
                <div class="info-card-body">
                    <div class="info-row">
                        <i class="fas fa-user info-icon"></i>
                        <div class="info-content">
                            <div class="info-label">@Model.ShippingAddress.FullName</div>
                        </div>
                    </div>
                    <div class="info-row">
                        <i class="fas fa-phone info-icon"></i>
                        <div class="info-content">
                            @Model.ShippingAddress.PhoneNumber
                        </div>
                    </div>
                    <div class="info-row">
                        <i class="fas fa-map-marker-alt info-icon"></i>
                        <div class="info-content">
                            @Model.ShippingAddress.Address
                            <br>
                            @Model.ShippingAddress.District, @Model.ShippingAddress.City
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Info -->
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-card-title">
                        <i class="fas fa-credit-card"></i>
                        Thông tin thanh toán
                    </div>
                </div>
                <div class="info-card-body">
                    <div class="info-row">
                        <i class="fas fa-wallet info-icon"></i>
                        <div class="info-content">
                            <div class="info-label">Phương thức</div>
                            @Model.Payment.Method
                        </div>
                    </div>
                    <div class="info-row">
                        <i class="fas fa-check-circle info-icon"></i>
                        <div class="info-content">
                            <div class="info-label">Trạng thái</div>
                            @(Model.Payment.Status == "Paid" ? "Đã thanh toán" : "Chưa thanh toán")
                        </div>
                    </div>
                    @if (Model.Payment.PaidAt.HasValue)
                    {
                        <div class="info-row">
                            <i class="fas fa-calendar info-icon"></i>
                            <div class="info-content">
                                <div class="info-label">Thanh toán lúc</div>
                                @Model.Payment.PaidAt.Value.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Summary -->
            <div class="summary-card">
                <div class="summary-row">
                    <div class="summary-label">Tổng tiền hàng</div>
                    <div class="summary-value">@Model.TotalAmount.ToString("N0")₫</div>
                </div>
                <div class="summary-row">
                    <div class="summary-label">Phí vận chuyển</div>
                    <div class="summary-value">0₫</div>
                </div>
                <div class="summary-row summary-total">
                    <div class="summary-label">Tổng cộng</div>
                    <div class="summary-value">@Model.TotalAmount.ToString("N0")₫</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <a href="@Url.Action("Index", "Order")" class="btn btn-back">
            <i class="fas fa-arrow-left"></i>
            Quay lại
        </a>
        <a href="@Url.Action("Index", "Product")" class="btn btn-primary">
            <i class="fas fa-shopping-cart"></i>
            Mua thêm
        </a>
    </div>
</div>
