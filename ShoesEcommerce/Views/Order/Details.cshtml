@model ShoesEcommerce.Models.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Order")">
                            <i class="fas fa-arrow-left me-1"></i>
                            Đơn hàng của tôi
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết đơn hàng</li>
                </ol>
            </nav>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="mb-0">
                                <i class="fas fa-shopping-bag me-2"></i>
                                Đơn hàng: @Model.OrderNumber
                            </h4>
                            <small>
                                <i class="fas fa-calendar me-1"></i>
                                Đặt hàng lúc: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <span class="badge bg-light text-dark me-2 fs-6">@Model.Status</span>
                            <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-warning") fs-6">
                                @Model.PaymentStatus
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Thông tin đơn hàng -->
                        <div class="col-lg-8">
                            <h5 class="mb-3">
                                <i class="fas fa-box me-2"></i>
                                Sản phẩm đã đặt
                            </h5>
                            
                            @foreach (var detail in Model.OrderDetails)
                            {
                                <div class="card mb-3 border-0 bg-light">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-2">
                                                <img src="@detail.ProductVariant.ImageUrl" 
                                                     alt="@detail.ProductVariant.Name" 
                                                     class="img-fluid rounded" 
                                                     style="max-width: 80px;">
                                            </div>
                                            <div class="col-md-6">
                                                <h6 class="mb-1">@detail.ProductVariant.Name</h6>
                                                <p class="mb-1 text-muted">
                                                    <small>
                                                        <i class="fas fa-palette me-1"></i>
                                                        Màu: @detail.ProductVariant.Color
                                                    </small>
                                                </p>
                                                <p class="mb-0 text-muted">
                                                    <small>
                                                        <i class="fas fa-ruler me-1"></i>
                                                        Kích thước: @detail.ProductVariant.Size
                                                    </small>
                                                </p>
                                            </div>
                                            <div class="col-md-2 text-center">
                                                <span class="badge bg-secondary fs-6">SL: @detail.Quantity</span>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <div class="text-primary fw-bold">
                                                    @detail.UnitPrice.ToString("N0")đ
                                                </div>
                                                <small class="text-muted">
                                                    Tổng: @detail.SubTotal.ToString("N0")đ
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Thông tin thanh toán và giao hàng -->
                        <div class="col-lg-4">
                            <!-- Thông tin giao hàng -->
                            <div class="card mb-3 border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-shipping-fast me-2"></i>
                                        Thông tin giao hàng
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <strong>@Model.ShippingAddress.FullName</strong>
                                    </div>
                                    <div class="mb-2">
                                        <i class="fas fa-phone me-2 text-muted"></i>
                                        @Model.ShippingAddress.PhoneNumber
                                    </div>
                                    <div class="mb-0">
                                        <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                        @Model.ShippingAddress.Address
                                    </div>
                                    <div class="mb-0">
                                        <i class="fas fa-city me-2 text-muted"></i>
                                        @Model.ShippingAddress.District, @Model.ShippingAddress.City
                                    </div>
                                </div>
                            </div>

                            <!-- Thông tin thanh toán -->
                            <div class="card mb-3 border-success">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-credit-card me-2"></i>
                                        Thông tin thanh toán
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <strong>Phương thức:</strong>
                                        <span class="badge bg-light text-dark ms-2">
                                            @Model.Payment.Method
                                        </span>
                                    </div>
                                    <div class="mb-2">
                                        <strong>Trạng thái:</strong>
                                        <span class="badge @(Model.Payment.Status == "Paid" ? "bg-success" : "bg-warning") ms-2">
                                            @Model.Payment.Status
                                        </span>
                                    </div>
                                    @if (Model.Payment.PaidAt.HasValue)
                                    {
                                        <div class="mb-0">
                                            <strong>Thanh toán lúc:</strong>
                                            <br>
                                            <small class="text-muted">
                                                @Model.Payment.PaidAt.Value.ToString("dd/MM/yyyy HH:mm")
                                            </small>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Tổng tiền -->
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-calculator me-2"></i>
                                        Tổng tiền
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Tổng tiền hàng:</span>
                                        <span>@Model.TotalAmount.ToString("N0")đ</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Phí vận chuyển:</span>
                                        <span>0đ</span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <strong>Tổng cộng:</strong>
                                        <strong class="text-primary fs-5">
                                            @Model.TotalAmount.ToString("N0")đ
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Nút hành động -->
                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <a href="@Url.Action("Index", "Order")" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-arrow-left me-1"></i>
                                Quay lại
                            </a>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">
                                <i class="fas fa-shopping-cart me-1"></i>
                                Mua thêm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updatePaymentStatus(status) {
            if (confirm('Bạn có chắc chắn muốn cập nhật trạng thái thanh toán?')) {
                $.ajax({
                    url: '@Url.Action("UpdatePaymentStatus", "Order")',
                    type: 'POST',
                    data: {
                        orderId: @Model.Id,
                        status: status,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi cập nhật trạng thái thanh toán');
                    }
                });
            }
        }
    </script>
}
