@model ShoesEcommerce.Models.Stocks.StockEntry

@{
    ViewData["Title"] = "Chi ti?t phi?u nh?p hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="background: #f9fafb; min-height: 100vh; padding: 24px;">
    <!-- Header -->
    <div style="background: white; border-radius: 12px; padding: 24px; margin-bottom: 24px; border: 1px solid #e5e7eb;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <div>
                <h4 style="margin: 0; color: #1f2937; font-weight: 700; font-size: 24px;">
                    <i class="fas fa-file-invoice" style="color: #3b82f6; margin-right: 8px;"></i>
                    Chi ti?t phi?u nh?p hàng
                </h4>
                <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">
                    Mã phi?u: <strong>NH@(Model.Id.ToString("000"))</strong>
                </p>
            </div>
            <div style="display: flex; gap: 12px;">
                @if (!Model.IsProcessed)
                {
                    <form method="post" asp-action="ProcessImport" asp-route-id="@Model.Id" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" style="background: #10b981; color: white; border: none; padding: 10px 20px; border-radius: 6px; font-size: 14px; font-weight: 600; cursor: pointer;">
                            <i class="fas fa-check"></i> X? lý nh?p kho
                        </button>
                    </form>
                }
                <a href="/Admin/Stock/Import" style="background: #f3f4f6; color: #374151; border: none; padding: 10px 20px; border-radius: 6px; font-size: 14px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 6px;">
                    <i class="fas fa-arrow-left"></i> Quay l?i
                </a>
            </div>
        </div>
    </div>

    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 24px;">
        <!-- Main Info -->
        <div>
            <!-- Product Info -->
            <div style="background: white; border-radius: 12px; padding: 24px; margin-bottom: 24px; border: 1px solid #e5e7eb;">
                <h5 style="font-size: 16px; font-weight: 700; margin-bottom: 20px; color: #1f2937;">
                    <i class="fas fa-box" style="color: #3b82f6; margin-right: 8px;"></i>
                    Thông tin s?n ph?m
                </h5>
                <div style="display: flex; gap: 20px; align-items: start;">
                    <img src="@Model.ProductVariant.ImageUrl" alt="@Model.ProductVariant.Product.Name" 
                         style="width: 120px; height: 120px; object-fit: cover; border-radius: 8px; border: 1px solid #e5e7eb;">
                    <div style="flex: 1;">
                        <h6 style="font-size: 18px; font-weight: 700; color: #1f2937; margin-bottom: 8px;">
                            @Model.ProductVariant.Product.Name
                        </h6>
                        <div style="display: flex; gap: 12px; margin-bottom: 12px;">
                            <span style="background: #e0f2fe; color: #0369a1; padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 600;">
                                Màu: @Model.ProductVariant.Color
                            </span>
                            <span style="background: #fef3c7; color: #92400e; padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 600;">
                                Size: @Model.ProductVariant.Size
                            </span>
                        </div>
                        <div style="font-size: 14px; color: #6b7280; line-height: 1.6;">
                            <strong>Giá bán:</strong> @Model.ProductVariant.Price.ToString("N0") ?<br/>
                            <strong>Danh m?c:</strong> @(Model.ProductVariant.Product.Category?.Name ?? "Ch?a có danh m?c")<br/>
                            <strong>Th??ng hi?u:</strong> @(Model.ProductVariant.Product.Brand?.Name ?? "Ch?a có th??ng hi?u")
                        </div>
                    </div>
                </div>
            </div>

            <!-- Import Details -->
            <div style="background: white; border-radius: 12px; padding: 24px; border: 1px solid #e5e7eb;">
                <h5 style="font-size: 16px; font-weight: 700; margin-bottom: 20px; color: #1f2937;">
                    <i class="fas fa-clipboard-list" style="color: #10b981; margin-right: 8px;"></i>
                    Chi ti?t nh?p hàng
                </h5>
                <table style="width: 100%; border-collapse: collapse;">
                    <tr style="border-bottom: 1px solid #e5e7eb;">
                        <td style="padding: 12px 0; color: #6b7280; font-weight: 600;">S? l??ng nh?p</td>
                        <td style="padding: 12px 0; text-align: right; font-weight: 700; color: #1f2937; font-size: 16px;">
                            @Model.QuantityReceived s?n ph?m
                        </td>
                    </tr>
                    <tr style="border-bottom: 1px solid #e5e7eb;">
                        <td style="padding: 12px 0; color: #6b7280; font-weight: 600;">??n giá nh?p</td>
                        <td style="padding: 12px 0; text-align: right; font-weight: 700; color: #1f2937;">
                            @Model.UnitCost.ToString("N0") ?
                        </td>
                    </tr>
                    <tr style="border-bottom: 2px solid #1f2937;">
                        <td style="padding: 12px 0; color: #1f2937; font-weight: 700; font-size: 16px;">T?ng ti?n</td>
                        <td style="padding: 12px 0; text-align: right; font-weight: 700; color: #dc2626; font-size: 20px;">
                            @Model.TotalCost.ToString("N0") ?
                        </td>
                    </tr>
                </table>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div style="margin-top: 20px; padding: 16px; background: #f9fafb; border-radius: 6px; border-left: 4px solid #3b82f6;">
                        <div style="font-weight: 600; color: #1f2937; margin-bottom: 8px;">
                            <i class="fas fa-sticky-note" style="color: #3b82f6;"></i> Ghi chú:
                        </div>
                        <div style="color: #6b7280; font-size: 14px;">@Model.Notes</div>
                    </div>
                }
            </div>
        </div>

        <!-- Sidebar -->
        <div>
            <!-- Status -->
            <div style="background: white; border-radius: 12px; padding: 24px; margin-bottom: 24px; border: 1px solid #e5e7eb;">
                <h5 style="font-size: 16px; font-weight: 700; margin-bottom: 16px; color: #1f2937;">Tr?ng thái</h5>
                @if (Model.IsProcessed)
                {
                    <div style="background: #d1fae5; color: #065f46; padding: 12px; border-radius: 6px; text-align: center; font-weight: 600;">
                        <i class="fas fa-check-circle"></i> ?ã x? lý
                    </div>
                }
                else
                {
                    <div style="background: #fef3c7; color: #92400e; padding: 12px; border-radius: 6px; text-align: center; font-weight: 600;">
                        <i class="fas fa-clock"></i> Ch?a x? lý
                    </div>
                }
            </div>

            <!-- Supplier Info -->
            <div style="background: white; border-radius: 12px; padding: 24px; margin-bottom: 24px; border: 1px solid #e5e7eb;">
                <h5 style="font-size: 16px; font-weight: 700; margin-bottom: 16px; color: #1f2937;">
                    <i class="fas fa-truck" style="color: #f59e0b;"></i> Nhà cung c?p
                </h5>
                <div style="font-size: 14px; color: #1f2937; line-height: 1.8;">
                    <strong>@(Model.Supplier?.Name ?? "Ch?a có thông tin")</strong><br/>
                    <span style="color: #6b7280;">@(Model.Supplier?.ContactInfo ?? "Ch?a có liên h?")</span>
                </div>
            </div>

            <!-- Timeline -->
            <div style="background: white; border-radius: 12px; padding: 24px; border: 1px solid #e5e7eb;">
                <h5 style="font-size: 16px; font-weight: 700; margin-bottom: 16px; color: #1f2937;">
                    <i class="fas fa-history" style="color: #8b5cf6;"></i> Th?i gian
                </h5>
                <div style="font-size: 13px; color: #6b7280; line-height: 2;">
                    <div style="margin-bottom: 8px;">
                        <strong style="color: #1f2937;">Ngày nh?p:</strong><br/>
                        @Model.EntryDate.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div style="margin-bottom: 8px;">
                        <strong style="color: #1f2937;">Ng??i nh?n:</strong><br/>
                        @Model.ReceivedBy
                    </div>
                    @if (!string.IsNullOrEmpty(Model.BatchNumber))
                    {
                        <div>
                            <strong style="color: #1f2937;">S? lô:</strong><br/>
                            @Model.BatchNumber
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
