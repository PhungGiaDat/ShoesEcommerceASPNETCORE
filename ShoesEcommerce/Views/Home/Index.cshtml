                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
@if (featuredVariants.Any())
{
    <section class="featured-products" aria-labelledby="featured-heading">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 id="featured-heading" class="section-title">Sản phẩm nổi bật</h2>
                    <p class="section-subtitle">Khám phá những đôi giày hot nhất với giá ưu đãi đặc biệt - Cập nhật liên tục bộ sưu tập mới nhất từ Nike, Adidas, Puma</p>
                    <div class="section-divider"></div>
                </div>
            </div>
            <div class="row g-4">
                @foreach (var variant in featuredVariants.Take(8))
                {
                    <div class="col-lg-3 col-md-6">
                        <article class="product-item" itemscope itemtype="https://schema.org/Product">
                            <div class="product-image">
                                <img src="@variant.ImageUrl" 
                                     alt="@variant.ProductName - @variant.Color - Giày @variant.BrandName chính hãng" 
                                     itemprop="image"
                                     loading="lazy"
                                     onerror="this.src='/images/no-image.svg'">
                                
                                @if (variant.HasActiveDiscount)
                                {
                                    <div class="discount-badge">
                                        -@(variant.DiscountPercentage?.ToString("F0"))%
                                    </div>
                                }
                            </div>
                            
                            <div class="product-info">
                                <h3 class="product-name" itemprop="name">
                                    @{
                                        var displayName = $"{variant.ProductName} - {variant.Color}";
                                    }
                                    @(displayName.Length > 40 ? displayName.Substring(0, 40) + "..." : displayName)
                                </h3>
                                
                                <div class="product-meta">
                                    <span class="brand-tag" itemprop="brand">@variant.BrandName</span>
                                </div>
                                
                                <div class="product-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                                    <meta itemprop="priceCurrency" content="VND">
                                    @if (variant.HasActiveDiscount)
                                    {
                                        <span class="original-price">
                                            @variant.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                        </span>
                                        <span class="discounted-price" itemprop="price" content="@variant.DiscountedPrice">
                                            @variant.DiscountedPrice.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="current-price" itemprop="price" content="@variant.Price">
                                            @variant.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                        </span>
                                    }
                                    <link itemprop="availability" href="https://schema.org/InStock">
                                </div>
                                
                                <div class="product-actions">
                                    <a href="/Product/Details/@variant.ProductId" class="btn-view-details" itemprop="url">
                                        Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </article>
                    </div>
                }
            </div>
            
            @if (featuredVariants.Count() > 8)
            {
                <div class="text-center mt-5">
                    <a href="/san-pham" class="btn-view-more">
                        Xem thêm sản phẩm
                    </a>
                </div>
            }
        </div>
    </section>
}

