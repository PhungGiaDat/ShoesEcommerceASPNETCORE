@using ShoesEcommerce.ViewModels.Product
@{
    ViewData["Title"] = "Trang chủ - ShoesEcommerce";
    var featuredVariants = ViewBag.FeaturedProductVariants as IEnumerable<ProductVariantDisplayInfo> ?? new List<ProductVariantDisplayInfo>();
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        Chào mừng quý khách đến với <span class="brand-highlight">NHTP</span> - nơi mang đến những sản phẩm chất lượng và dịch vụ tận tâm nhất!
                    </h1>
                    <div class="hero-cta">
                        <a href="/Product" class="btn-primary-action">
                            Mua ngay
                        </a>
                        <a href="/Product" class="btn-secondary-action">
                            Tất cả sản phẩm
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="product-showcase">
                        <div class="product-cards-grid">
                            <div class="product-card card-1">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-2">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-3">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-4">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-5">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-6">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                        </div>
                        <div class="showcase-shadow"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
@if (featuredVariants.Any())
{
    <section class="featured-products">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="section-title">Sản phẩm nổi bật</h2>
                    <p class="section-subtitle">Khám phá những sản phẩm hot nhất với giá tốt nhất</p>
                    <div class="section-divider"></div>
                </div>
            </div>
            <div class="row g-4">
                @foreach (var variant in featuredVariants.Take(8))
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="product-item">
                            <div class="product-image">
                                <img src="@variant.ImageUrl" 
                                     alt="@variant.ProductName - @variant.Color" 
                                     onerror="this.src='/images/no-image.svg'">
                                
                                @if (variant.HasActiveDiscount)
                                {
                                    <div class="discount-badge">
                                        -@(variant.DiscountPercentage?.ToString("F0"))%
                                    </div>
                                }
                            </div>
                            
                            <div class="product-info">
                                <h5 class="product-name">
                                    @{
                                        // Display only Product name - Color (remove size)
                                        var displayName = $"{variant.ProductName} - {variant.Color}";
                                    }
                                    @(displayName.Length > 40 ? displayName.Substring(0, 40) + "..." : displayName)
                                </h5>
                                
                                <div class="product-meta">
                                    <span class="brand-tag">@variant.BrandName</span>
                                </div>
                                
                                <div class="product-price">
                                    @if (variant.HasActiveDiscount)
                                    {
                                        <span class="original-price">
                                            @variant.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                        </span>
                                        <span class="discounted-price">
                                            @variant.DiscountedPrice.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="current-price">
                                            @variant.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                        </span>
                                    }
                                </div>
                                
                                <div class="product-actions">
                                    <a href="/Product/Details/@variant.ProductId" class="btn-view-details">
                                        Xem chi tiết
                                    </a>
                                    @if (variant.IsInStock)
                                    {
                                        <button type="button" class="btn-add-cart add-to-cart-btn" data-variant-id="@variant.Id">
                                            Thêm vào giỏ
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn-out-of-stock" disabled>
                                            Hết hàng
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            @if (featuredVariants.Count() > 8)
            {
                <div class="text-center mt-5">
                    <a href="/Product" class="btn-view-more">
                        Xem thêm sản phẩm
                    </a>
                </div>
            }
        </div>
    </section>
}



<!-- Minimalist Styles -->
<style>
