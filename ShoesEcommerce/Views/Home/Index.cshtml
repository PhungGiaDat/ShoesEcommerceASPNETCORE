@{
    ViewData["Title"] = "Trang chủ - ShoesEcommerce";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        Chào mừng quý khách đến với NHTP - nơi mang đến những sản phẩm chất lượng và dịch vụ tận tâm nhất!
                    </h1>
                    <div class="hero-cta">
                        <a href="#" class="btn btn-shop-now">Mua ngay</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="product-showcase">
                        <div class="product-cards-grid">
                            <div class="product-card card-1">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-2">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-3">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-4">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-5">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                            <div class="product-card card-6">
                                <div class="card-content">
                                    <span class="brand-logo">waa.</span>
                                </div>
                            </div>
                        </div>
                        <div class="showcase-shadow"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products Section (Optional) -->
<section class="featured-products py-5 d-none">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">Sản phẩm nổi bật</h2>
                <p class="section-subtitle">Khám phá những sản phẩm hot nhất</p>
            </div>
        </div>
        <div class="row g-4">
            <!-- Product items would go here -->
            <div class="col-lg-3 col-md-6">
                <div class="product-item">
                    <div class="product-image">
                        <img src="https://via.placeholder.com/300x300" alt="Product" class="img-fluid">
                    </div>
                    <div class="product-info">
                        <h5 class="product-name">Giày thể thao</h5>
                        <p class="product-price">1.299.000 VNĐ</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
