@{
    ViewData["Title"] = "Giới thiệu về SPORTS";
    ViewData["MetaDescription"] = "SPORTS - Chuyên cung cấp giày thể thao, giày đá bóng, futsal chính hãng. Cam kết 100% hàng chính hãng.";
}

<div class="about-page">
    <!-- Hero Section -->
    <section class="about-hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="about-title">VỀ <span class="text-accent">SPORTS</span></h1>
                    <p class="about-subtitle">Chuyên cung cấp giày thể thao, giày đá bóng, futsal chính hãng từ các thương hiệu hàng đầu thế giới.</p>
                </div>
                <div class="col-lg-6">
                    <div class="about-hero-image">
                        <!-- Placeholder: Upload hình giới thiệu 600x400px -->
                        <img src="/images/about/hero.jpg" alt="SPORTS Store" onerror="this.style.display='none'">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Story Section -->
    <section class="about-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="section-title">CÂU CHUYỆN CỦA CHÚNG TÔI</h2>
                    <p class="section-text">
                        SPORTS được thành lập với sứ mệnh mang đến cho người yêu thể thao Việt Nam những đôi giày chất lượng cao, 
                        chính hãng 100% từ các thương hiệu nổi tiếng như Nike, Adidas, Puma, Mizuno, Joma...
                    </p>
                    <p class="section-text">
                        Chúng tôi tin rằng một đôi giày tốt sẽ giúp bạn thể hiện tốt nhất trên sân cỏ. 
                        Đó là lý do chúng tôi cam kết chỉ bán sản phẩm chính hãng với giá tốt nhất thị trường.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="about-section bg-light">
        <div class="container">
            <h2 class="section-title text-center">GIÁ TRỊ CỐT LÕI</h2>
            <div class="row g-4 mt-4">
                <div class="col-md-4">
                    <div class="value-card">
                        <div class="value-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h3>100% Chính hãng</h3>
                        <p>Cam kết tất cả sản phẩm đều là hàng chính hãng, có đầy đủ tem mác và bảo hành từ nhà sản xuất.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="value-card">
                        <div class="value-icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h3>Khách hàng là trên hết</h3>
                        <p>Đội ngũ tư vấn chuyên nghiệp, hỗ trợ đo chân chính xác để bạn có được đôi giày phù hợp nhất.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="value-card">
                        <div class="value-icon">
                            <i class="fas fa-sync-alt"></i>
                        </div>
                        <h3>Đổi trả linh hoạt</h3>
                        <p>Chính sách đổi trả 30 ngày, miễn phí đổi size nếu sản phẩm không vừa.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="about-cta">
        <div class="container text-center">
            <h2>SẴN SÀNG TRẢI NGHIỆM?</h2>
            <p>Khám phá bộ sưu tập giày thể thao chính hãng ngay hôm nay</p>
            <a href="/san-pham" class="btn-cta">XEM SẢN PHẨM</a>
        </div>
    </section>
</div>

<style>
    .about-page {
        --accent-red: #c41e3a;
        --primary-black: #1a1a1a;
    }

    .about-hero {
        padding: 80px 0;
        background: linear-gradient(135deg, #f5f5f5 0%, #e5e5e5 100%);
    }

    .about-title {
        font-size: 48px;
        font-weight: 900;
        margin-bottom: 20px;
    }

    .text-accent {
        color: var(--accent-red);
    }

    .about-subtitle {
        font-size: 18px;
        color: #666;
        line-height: 1.8;
    }

    .about-hero-image img {
        max-width: 100%;
        border-radius: 12px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.1);
    }

    .about-section {
        padding: 80px 0;
    }

    .section-title {
        font-size: 32px;
        font-weight: 800;
        margin-bottom: 30px;
    }

    .section-text {
        font-size: 16px;
        color: #666;
        line-height: 1.8;
        margin-bottom: 20px;
    }

    .value-card {
        background: white;
        padding: 40px 30px;
        border-radius: 12px;
        text-align: center;
        height: 100%;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        transition: transform 0.3s ease;
    }

    .value-card:hover {
        transform: translateY(-5px);
    }

    .value-icon {
        width: 80px;
        height: 80px;
        background: var(--accent-red);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

    .value-icon i {
        font-size: 32px;
        color: white;
    }

    .value-card h3 {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .value-card p {
        color: #666;
        line-height: 1.6;
    }

    .about-cta {
        padding: 80px 0;
        background: var(--primary-black);
        color: white;
    }

    .about-cta h2 {
        font-size: 36px;
        font-weight: 800;
        margin-bottom: 15px;
    }

    .about-cta p {
        font-size: 18px;
        opacity: 0.8;
        margin-bottom: 30px;
    }

    .btn-cta {
        display: inline-block;
        background: var(--accent-red);
        color: white;
        padding: 16px 40px;
        border-radius: 4px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-cta:hover {
        background: #a01830;
        color: white;
        transform: translateY(-2px);
    }

    @@media (max-width: 768px) {
        .about-title {
            font-size: 32px;
        }

        .about-cta h2 {
            font-size: 28px;
        }
    }
</style>
