@model List<ShoesEcommerce.ViewModels.Cart.CartItemViewModel>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Giỏ hàng";
}

<div class="container-fluid py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Ảnh</th>
                        <th>Sản phẩm</th>
                        <th>Màu sắc</th>
                        <th>Kích thước</th>
                        <th>Thương hiệu</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 48px; height: 48px; object-fit: cover; border-radius: 6px; border: 1px solid #e2e8f0;" />
                            </td>
                            <td>@item.ProductName</td>
                            <td>@item.Color</td>
                            <td>@item.Size</td>
                            <td>@item.Brand</td>
                            <td>@item.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" style="width:60px;" />
                                    <button type="submit" class="btn btn-secondary btn-sm">Cập nhật</button>
                                </form>
                            </td>
                            <td>@item.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                            <td>
                                <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.Id })" class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-end mt-4">
            <a asp-controller="Order" asp-action="Checkout" class="btn btn-success btn-lg">
                <i class="fas fa-shopping-bag"></i> Đặt hàng
            </a>
        </div>
    }
    else
    {
        <div class="text-center my-5">
            <i class="fas fa-shopping-cart fa-5x text-muted"></i>
            <h4 class="text-muted">Giỏ hàng của bạn trống.</h4>
            <p class="text-muted">Hãy thêm sản phẩm từ trang sản phẩm!</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary mt-2">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách sản phẩm
            </a>
        </div>
    }
</div>