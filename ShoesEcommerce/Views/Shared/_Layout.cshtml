    <!-- Sports Theme Styles -->
    <style>
        :root {
            --sports-black: #1a1a1a;
            --sports-dark: #2d2d2d;
            --sports-accent: #c41e3a;
            --sports-white: #ffffff;
            --sports-gray-50: #fafafa;
            --sports-gray-100: #f5f5f5;
            --sports-gray-200: #e5e5e5;
            --sports-gray-300: #d4d4d4;
            --sports-gray-500: #737373;
            --sports-gray-700: #404040;
            --sports-gray-800: #262626;
            --sports-success: #16a34a;
            --sports-error: #dc2626;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            color: var(--sports-gray-800);
            line-height: 1.6;
            background: var(--sports-white);
        }

        /* Top Bar */
        .top-bar {
            background: var(--sports-black);
            color: var(--sports-white);
            padding: 10px 0;
            font-size: 13px;
        }

        .top-bar-text {
            color: rgba(255,255,255,0.9);
        }

        .top-bar-text strong {
            color: var(--sports-white);
        }

        /* Sports Navbar */
        .sports-header {
            position: sticky;
            top: 0;
            z-index: 1000;
            background: var(--sports-white);
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .sports-navbar {
            background: var(--sports-white);
            padding: 0;
        }

        .sports-logo .logo-text {
            font-family: 'Arial Black', Arial, sans-serif;
            font-size: 32px;
            font-weight: 900;
            color: var(--sports-black);
            text-transform: lowercase;
            letter-spacing: -1px;
            text-decoration: none;
        }

        /* Main Nav - Larger Text */
        .main-nav .nav-link {
            color: var(--sports-black);
            font-weight: 600;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 20px 12px;
            transition: all 0.3s ease;
            position: relative;
        }

        .main-nav .nav-link:hover {
            color: var(--sports-accent);
        }

        .main-nav .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 12px;
            right: 12px;
            height: 3px;
            background: var(--sports-accent);
