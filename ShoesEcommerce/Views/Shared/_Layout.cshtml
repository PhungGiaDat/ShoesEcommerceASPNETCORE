    <!-- Alert JavaScript -->
    <script>
        function showAlert(message, type, duration) {
            type = type || 'info';
            duration = duration || 5000;
            
            var alertDiv = document.createElement('div');
            alertDiv.className = 'alert-toast ' + type;
            
            var iconMap = {
                error: 'fas fa-exclamation-circle',
                success: 'fas fa-check-circle',
                info: 'fas fa-info-circle',
                warning: 'fas fa-exclamation-triangle'
            };
            
            var titleMap = {
                error: 'Lỗi',
                success: 'Thành công',
                info: 'Thông báo',
                warning: 'Cảnh báo'
            };
            
            alertDiv.innerHTML = '<div class="toast-header"><i class="toast-icon ' + (iconMap[type] || iconMap.info) + '"></i><span>' + (titleMap[type] || titleMap.info) + '</span></div><div class="toast-body">' + message + '</div><button class="toast-close" onclick="removeAlert(this.parentElement)">&times;</button>';
            
            document.body.appendChild(alertDiv);
            setTimeout(function() { removeAlert(alertDiv); }, duration);
        }
        
        function removeAlert(alertElement) {
            if (alertElement && alertElement.parentNode) {
                alertElement.classList.add('removing');
                setTimeout(function() { alertElement.remove(); }, 300);
            }
        }
        
        function showErrorAlert(msg, dur) { showAlert(msg, 'error', dur || 7000); }
        function showSuccessAlert(msg, dur) { showAlert(msg, 'success', dur || 5000); }
        function showInfoAlert(msg, dur) { showAlert(msg, 'info', dur || 5000); }
        function showWarningAlert(msg, dur) { showAlert(msg, 'warning', dur || 6000); }
        
        function showSuccessPopup(message) {
            var overlay = document.createElement('div');
            overlay.className = 'success-popup-overlay';
            
            var popup = document.createElement('div');
            popup.className = 'success-popup';
            popup.innerHTML = '<div class="popup-icon"><i class="fas fa-check-circle"></i></div><h3>Thành công!</h3><p>' + message + '</p><button class="popup-button" onclick="closeSuccessPopup()">Đóng</button>';
            
            document.body.appendChild(overlay);
            document.body.appendChild(popup);
            
            overlay.addEventListener('click', closeSuccessPopup);
            setTimeout(closeSuccessPopup, 5000);
        }
        
        function closeSuccessPopup() {
            document.querySelectorAll('.success-popup, .success-popup-overlay').forEach(function(el) { el.remove(); });
        }
        
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeSuccessPopup();
                document.querySelectorAll('.alert-toast').forEach(removeAlert);
            }
        });
    </script>
    
