@using Microsoft.Extensions.Options
@using ShoesEcommerce.Services.Options
@inject IOptions<EmailSettings> EmailSettings

@{
    var settings = EmailSettings.Value;
    var userId = settings.MailchimpUserId;
    var audienceId = settings.MailchimpAudienceId;
    var serverPrefix = settings.MailchimpServerPrefix;
    var formAction = $"https://{serverPrefix}.list-manage.com/subscribe/post?u={userId}&id={audienceId}&f_id=00142ae2f0";
}

<style>
    .newsletter-section {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        padding: 60px 20px;
        text-align: center;
    }

    .newsletter-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .newsletter-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .newsletter-title {
        color: #ffffff;
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0 0 0.5rem;
    }

    .newsletter-subtitle {
        color: #9ca3af;
        font-size: 1rem;
        margin: 0 0 2rem;
    }

    .newsletter-form {
        display: flex;
        gap: 12px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .newsletter-input {
        flex: 1;
        min-width: 250px;
        max-width: 350px;
        padding: 14px 20px;
        border: 2px solid #404040;
        border-radius: 50px;
        background: #2d2d2d;
        color: #ffffff;
        font-size: 1rem;
        outline: none;
        transition: all 0.3s;
    }

    .newsletter-input::placeholder {
        color: #6b7280;
    }

    .newsletter-input:focus {
        border-color: #ffffff;
        background: #333333;
    }

    .newsletter-btn {
        padding: 14px 32px;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
        border: none;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .newsletter-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(34, 197, 94, 0.3);
    }

    .newsletter-benefits {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .benefit-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #9ca3af;
        font-size: 0.875rem;
    }

    .benefit-icon {
        color: #22c55e;
    }

    .newsletter-response {
        margin-top: 1rem;
        padding: 12px 20px;
        border-radius: 8px;
        display: none;
    }

    .newsletter-response.success {
        display: block;
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
    }

    .newsletter-response.error {
        display: block;
        background: rgba(239, 68, 68, 0.2);
        color: #ef4444;
    }

    @@media (max-width: 640px) {
        .newsletter-form {
            flex-direction: column;
            align-items: center;
        }

        .newsletter-input {
            width: 100%;
            max-width: none;
        }

        .newsletter-btn {
            width: 100%;
            justify-content: center;
        }

        .newsletter-benefits {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>

<section class="newsletter-section">
    <div class="newsletter-container">
        <div class="newsletter-icon"><i class="fas fa-envelope"></i></div>
        <h2 class="newsletter-title">&#272;&#259;ng k&#253; nh&#7853;n &#432;u &#273;&#227;i</h2>
        <p class="newsletter-subtitle">Nh&#7853;n th&#244;ng tin khuy&#7871;n m&#227;i, s&#7843;n ph&#7849;m m&#7899;i v&#224; m&#227; gi&#7843;m gi&#225; &#273;&#7897;c quy&#7873;n!</p>

        <form action="@formAction" 
              method="post" 
              id="mc-embedded-subscribe-form" 
              name="mc-embedded-subscribe-form" 
              class="newsletter-form validate" 
              target="_blank" 
              novalidate
              accept-charset="UTF-8">
            
            <input type="email" 
                   name="EMAIL" 
                   class="newsletter-input required email" 
                   id="mce-EMAIL" 
                   required 
                   placeholder="Nh&#7853;p email c&#7911;a b&#7841;n...">
            
            <!-- Honeypot field - don't remove -->
            <div style="position: absolute; left: -5000px;" aria-hidden="true">
                <input type="text" name="b_@(userId)_@(audienceId)" tabindex="-1" value="">
            </div>
            
            <button type="submit" name="subscribe" id="mc-embedded-subscribe" class="newsletter-btn">
                <i class="fas fa-paper-plane"></i>
                &#272;&#259;ng k&#253; ngay
            </button>
        </form>

        <div id="mce-responses" class="clear">
            <div class="newsletter-response" id="mce-error-response"></div>
            <div class="newsletter-response success" id="mce-success-response"></div>
        </div>

        <div class="newsletter-benefits">
            <div class="benefit-item">
                <i class="fas fa-check-circle benefit-icon"></i>
                <span>Gi&#7843;m 10% &#273;&#417;n &#273;&#7847;u ti&#234;n</span>
            </div>
            <div class="benefit-item">
                <i class="fas fa-check-circle benefit-icon"></i>
                <span>C&#7853;p nh&#7853;t Flash Sale s&#7899;m</span>
            </div>
            <div class="benefit-item">
                <i class="fas fa-check-circle benefit-icon"></i>
                <span>H&#7911;y &#273;&#259;ng k&#253; b&#7845;t c&#7913; l&#250;c n&#224;o</span>
            </div>
        </div>
    </div>
</section>

<script src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"></script>
<script>
    (function($) {
        window.fnames = new Array();
        window.ftypes = new Array();
        fnames[0] = 'EMAIL'; ftypes[0] = 'email';
        fnames[1] = 'FNAME'; ftypes[1] = 'text';
        fnames[2] = 'LNAME'; ftypes[2] = 'text';
    }(jQuery));
</script>
