@using ShoesEcommerce.Helpers
@model ShoesEcommerce.ViewModels.Product.ProductVariantDisplayInfo

@{
    // Display name format: "ProductName - Color" for variant display
    var displayName = !string.IsNullOrEmpty(Model.Color) 
        ? $"{Model.ProductName} - {Model.Color}" 
        : Model.ProductName;
    
    // Generate SEO-friendly URL: /category-slug/product-slug-id
    var categorySlug = !string.IsNullOrEmpty(Model.CategoryName) 
        ? Model.CategoryName.ToSlug() 
        : "san-pham";
    var productSlug = $"{Model.ProductName.ToSlug()}-{Model.ProductId}";
    var productUrl = $"/{categorySlug}/{productSlug}";
}

<div class="col-6 col-md-3">
    <article class="product-card">
        <a href="@productUrl" class="product-link">
            <div class="product-image">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@displayName" loading="lazy" onerror="this.onerror=null;this.parentElement.innerHTML='<div class=\'no-image-placeholder\'><i class=\'fas fa-image\'></i><span>No Image</span></div>'">
                }
                else
                {
                    <div class="no-image-placeholder">
                        <i class="fas fa-image"></i>
                        <span>No Image</span>
                    </div>
                }
                @if (Model.HasActiveDiscount && Model.DiscountPercentage.HasValue)
                {
                    <span class="badge-discount">-@Model.DiscountPercentage.Value.ToString("F0")%</span>
                }
                @if (Model.StockQuantity <= 0)
                {
                    <span class="badge-outstock">Hết hàng</span>
                }
            </div>
            <div class="product-info">
                @if (!string.IsNullOrEmpty(Model.BrandName))
                {
                    <span class="product-brand">@Model.BrandName</span>
                }
                <h3 class="product-name">@displayName</h3>
                <div class="product-price">
                    @if (Model.HasActiveDiscount)
                    {
                        <span class="price-sale">@Model.DiscountedPrice.ToString("N0")₫</span>
                        <span class="price-original">@Model.Price.ToString("N0")₫</span>
                    }
                    else
                    {
                        <span class="price-current">@Model.Price.ToString("N0")₫</span>
                    }
                </div>
            </div>
        </a>
        @if (Model.StockQuantity > 0)
        {
            <button type="button" class="btn-add-cart" data-variant-id="@Model.Id" data-product-id="@Model.ProductId">
                <i class="fas fa-shopping-cart"></i> Thêm vào giỏ
            </button>
        }
        else
        {
            <button type="button" class="btn-add-cart disabled" disabled>
                Hết hàng
            </button>
        }
    </article>
</div>

<style>
    .product-card {
        background: var(--white, #fff);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid #e5e5e5;
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    .product-card:hover {
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transform: translateY(-5px);
    }
    .product-link {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        flex: 1;
    }
    .product-image {
        position: relative;
        padding-top: 100%;
        overflow: hidden;
        background: #f5f5f5;
    }
    .product-image img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    .product-card:hover .product-image img {
        transform: scale(1.05);
    }
    .no-image-placeholder {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #f0f0f0;
        color: #ccc;
    }
    .no-image-placeholder i {
        font-size: 40px;
        margin-bottom: 8px;
    }
    .no-image-placeholder span {
        font-size: 12px;
        text-transform: uppercase;
    }
    .badge-discount {
        position: absolute;
        top: 12px;
        left: 12px;
        background: #c41e3a;
        color: #fff;
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 700;
    }
    .badge-outstock {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0,0,0,0.7);
        color: #fff;
        padding: 8px 16px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
    }
    .product-info {
        padding: 16px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    .product-brand {
        display: block;
        font-size: 11px;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 4px;
    }
    .product-name {
        font-size: 14px;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 12px;
        line-height: 1.4;
        min-height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
    .product-price {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: auto;
    }
    .price-sale {
        font-size: 16px;
        font-weight: 700;
        color: #c41e3a;
    }
    .price-original {
        font-size: 13px;
        color: #888;
        text-decoration: line-through;
    }
    .price-current {
        font-size: 16px;
        font-weight: 700;
        color: #1a1a1a;
    }
    .btn-add-cart {
        width: 100%;
        background: #1a1a1a;
        color: #fff;
        border: none;
        padding: 12px;
        font-weight: 600;
        font-size: 13px;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .btn-add-cart:hover:not(.disabled) {
        background: #c41e3a;
    }
    .btn-add-cart.disabled {
        background: #ccc;
        cursor: not-allowed;
    }
</style>
